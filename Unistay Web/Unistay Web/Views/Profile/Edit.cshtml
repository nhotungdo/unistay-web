@model Unistay_Web.Models.User.UserProfile
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

<!-- Custom Styles for Profile Page (Shared with Index) -->
<style>
    .profile-header-bg {
        position: relative;
        height: 380px;
        background: radial-gradient(circle at 10% 20%, rgb(80, 70, 229) 0%, rgb(15, 23, 42) 90%);
        border-radius: 0 0 40px 40px;
        overflow: hidden;
        margin-bottom: 80px;
    }

    .mesh-gradient-orb {
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(124, 58, 237, 0.4) 0%, rgba(0,0,0,0) 70%);
        top: -200px;
        left: -100px;
        filter: blur(50px);
        animation: breath 10s infinite ease-in-out;
    }

    .mesh-gradient-orb-2 {
        position: absolute;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(56, 189, 248, 0.3) 0%, rgba(0,0,0,0) 70%);
        bottom: -100px;
        right: -100px;
        filter: blur(50px);
        animation: breath 12s infinite ease-in-out reverse;
    }

    @@keyframes breath {
        0%, 100% { transform: scale(1); opacity: 0.8; }
        50% { transform: scale(1.1); opacity: 1; }
    }

    @@media (max-width: 992px) {
        .profile-header-bg { height: 280px; margin-bottom: 60px; }
    }
</style>

<!-- Hero Section -->
<div class="profile-header-bg">
    <div class="mesh-gradient-orb"></div>
    <div class="mesh-gradient-orb-2"></div>
     <div class="container h-100 position-relative z-1 d-flex align-items-center justify-content-center">
        <div class="text-center text-white" style="margin-top: -60px;">
             <h1 class="fw-bold display-5 mb-2">Chỉnh sửa hồ sơ</h1>
             <p class="opacity-75 fs-5">Cập nhật thông tin để chúng tôi hỗ trợ bạn tốt hơn</p>
        </div>
    </div>
</div>

<div class="container pb-5" style="margin-top: -160px; position: relative; z-index: 10;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="glass-panel overflow-hidden shadow-2xl animate-slide-up bg-surface">
                <!-- Toolbar -->
                <div class="p-4 bg-white bg-opacity-5 border-bottom border-light d-flex align-items-center justify-content-between">
                     <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-light btn-sm rounded-pill px-3 border-opacity-25 text-body hover-bg-light">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại
                    </a>
                    <div class="d-flex align-items-center gap-2 text-muted small">
                         <i class="bi bi-shield-lock"></i> Thông tin được bảo mật
                    </div>
                </div>

                <div class="p-4 p-md-5">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-4 shadow-sm" role="alert">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-exclamation-circle-fill"></i>
                                @TempData["ErrorMessage"]
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" class="needs-validation">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-5">
                            <!-- Personal Information -->
                            <div class="col-lg-6">
                                <div class="d-flex align-items-center gap-3 mb-4">
                                     <div class="icon-box bg-primary-subtle text-primary rounded-3 p-2">
                                         <i class="bi bi-person-vcard fs-4"></i>
                                     </div>
                                    <h5 class="fw-bold mb-0 text-gradient">Thông tin cá nhân</h5>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control bg-surface border-glass" id="fullName" name="fullName" value="@Model.FullName" placeholder="Họ và tên" required>
                                    <label for="fullName">Tên đầy đủ <span class="text-danger">*</span></label>
                                    <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                                </div>

                                <div class="row g-3 mb-3">
                                    <div class="col-md-4">
                                         <div class="form-floating">
                                            <input type="tel" class="form-control bg-surface border-glass" id="phoneNumber" name="phoneNumber" value="@Model.PhoneNumber" placeholder="Số điện thoại">
                                            <label for="phoneNumber">Số điện thoại</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input type="date" class="form-control bg-surface border-glass" id="dateOfBirth" name="dateOfBirth" value="@(Model.DateOfBirth?.ToString("yyyy-MM-dd"))" placeholder="Ngày sinh">
                                            <label for="dateOfBirth">Ngày sinh</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input type="number" class="form-control bg-surface border-glass" id="age" name="age" value="@Model.Age" min="15" max="100" placeholder="Tuổi">
                                            <label for="age">Tuổi</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 mb-3">
                                     <div class="col-md-6">
                                        <div class="form-floating">
                                            <select class="form-select bg-surface border-glass" id="gender" name="gender">
                                                <option value="">-- Chọn --</option>
                                                <option value="Male" selected="@(Model.Gender == "Male")">Nam</option>
                                                <option value="Female" selected="@(Model.Gender == "Female")">Nữ</option>
                                                <option value="Other" selected="@(Model.Gender == "Other")">Khác</option>
                                            </select>
                                            <label for="gender">Giới tính</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control bg-surface border-glass" id="occupation" name="occupation" value="@Model.Occupation" placeholder="Nghề nghiệp">
                                            <label for="occupation">Nghề nghiệp</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea class="form-control bg-surface border-glass h-auto" id="bio" name="bio" rows="4" style="min-height: 120px" placeholder="Viết về bản thân...">@Model.Bio</textarea>
                                    <label for="bio">Giới thiệu bản thân</label>
                                </div>
                                
                                 <div class="form-floating mb-3">
                                    <textarea class="form-control bg-surface border-glass h-auto" id="lifestyle" name="lifestyle" rows="3" style="min-height: 100px" placeholder="Lối sống...">@Model.Lifestyle</textarea>
                                    <label for="lifestyle">Lối sống / Thói quen</label>
                                </div>
                            </div>

                            <!-- Rental Preferences -->
                            <div class="col-lg-6">
                                <div class="d-flex align-items-center gap-3 mb-4">
                                     <div class="icon-box bg-success-subtle text-success rounded-3 p-2">
                                         <i class="bi bi-houses fs-4"></i>
                                     </div>
                                    <h5 class="fw-bold mb-0 text-gradient">Nhu cầu tìm trọ</h5>
                                </div>

                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control bg-surface border-glass" id="city" name="city" value="@Model.City" placeholder="Thành phố">
                                            <label for="city">Thành phố</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control bg-surface border-glass" id="district" name="district" value="@Model.District" placeholder="Quận/Huyện">
                                            <label for="district">Quận/Huyện</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 mb-3">
                                     <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control bg-surface border-glass" id="ward" name="ward" value="@Model.Ward" placeholder="Phường/Xã">
                                            <label for="ward">Phường/Xã</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control bg-surface border-glass" id="livingArea" name="livingArea" value="@Model.LivingArea" placeholder="Khu vực cụ thể">
                                            <label for="livingArea">Khu vực mong muốn</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="budget" class="form-label text-muted small fw-bold text-uppercase">Ngân sách dự kiến</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-surface border-glass border-end-0 text-success fw-bold">₫</span>
                                        <input type="number" class="form-control bg-surface border-glass border-start-0 ps-0 fw-bold text-success fs-5" id="budget" name="budget" value="@Model.Budget" step="100000" placeholder="0">
                                        <span class="input-group-text bg-surface border-glass text-muted">/ tháng</span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="expectedStayDuration" class="form-label text-muted small fw-bold text-uppercase">Dự kiến chuyển vào</label>
                                    <input type="date" class="form-control bg-surface border-glass" id="expectedStayDuration" name="expectedStayDuration" value="@(Model.ExpectedStayDuration?.ToString("yyyy-MM-dd"))">
                                </div>
                                
                                <div class="p-3 bg-opacity-10 bg-info rounded-3 border border-info border-opacity-25">
                                    <div class="d-flex gap-2">
                                        <i class="bi bi-info-circle-fill text-info mt-1"></i>
                                        <small class="text-muted text-body-secondary">
                                            Thông tin này giúp hệ thống gợi ý phòng trọ phù hợp nhất. 
                                            <br>Bạn có thể cập nhật bất cứ lúc nào.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-5 border-light opacity-50">

                        <div class="d-flex justify-content-end gap-3 align-items-center">
                            <a href="@Url.Action("Index", "Profile")" class="text-muted text-decoration-none fw-medium px-3 hover-text-dark">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary px-5 py-3 fw-bold rounded-pill shadow-lg hover-transform">
                                <i class="bi bi-check2-circle me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4 text-muted small">
                &copy; @DateTime.Now.Year Unistay Profile Management
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="position-relative" style="min-height: 100vh;">
     <!-- Background Decoration -->
    <div class="position-absolute w-100 h-50 top-0 start-0" style="background: linear-gradient(135deg, rgba(var(--primary-rgb), 0.05), rgba(var(--secondary-rgb), 0.05)); z-index: -1;"></div>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="glass-panel overflow-hidden shadow-2xl animate-slide-up">
                    <div class="p-4 p-md-5 bg-white bg-opacity-50 border-bottom border-light text-center">
                        <div class="d-inline-flex bg-primary-subtle text-primary rounded-circle p-3 mb-3">
                             <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                        </div>
                        <h2 class="h3 fw-bold mb-1">Đổi mật khẩu</h2>
                        <p class="text-muted mb-0">Cập nhật mật khẩu để bảo vệ tài khoản của bạn</p>
                    </div>

                    <div class="p-4 p-md-5">
                         @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mb-4 shadow-sm" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4 shadow-sm" role="alert">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <strong>Không thể đổi mật khẩu</strong>
                                </div>
                                <ul class="mb-0 small ps-3">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form method="post" class="needs-validation">
                            @Html.AntiForgeryToken()
                            
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control bg-surface border-glass" id="currentPassword" name="currentPassword" placeholder="Mật khẩu hiện tại" required>
                                <label for="currentPassword">Mật khẩu hiện tại</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control bg-surface border-glass" id="newPassword" name="newPassword" placeholder="Mật khẩu mới" required>
                                <label for="newPassword">Mật khẩu mới</label>
                                <div class="form-text mt-2 ms-1 text-muted small">
                                    <i class="bi bi-shield me-1"></i> Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số.
                                </div>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control bg-surface border-glass" id="confirmPassword" name="confirmPassword" placeholder="Nhập lại mật khẩu mới" required>
                                <label for="confirmPassword">Nhập lại mật khẩu mới</label>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary py-3 fw-bold shadow-sm hover-lift">
                                    Xác nhận thay đổi
                                </button>
                                <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary py-3 fw-medium border-0">
                                    Quay lại hồ sơ
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
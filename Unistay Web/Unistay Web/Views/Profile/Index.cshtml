@model Unistay_Web.Models.User.UserProfile
@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<section class="py-5" style="background: linear-gradient(to bottom right, #f8faff, #f0f4ff); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Profile Card -->
                <div class="glass-panel overflow-hidden mb-4 animate-scale-in">
                    <div class="position-relative h-40 bg-gradient-to-r from-primary-500 to-primary-700"></div>

                    <div class="p-5 pt-0">
                        <div class="row align-items-end">
                            <div class="col-auto">
                                <div class="position-relative d-inline-block mt-n6">
                                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                                    {
                                        <img id="avatarPreview" src="@Model.AvatarUrl"
                                            class="rounded-circle border-4 border-white shadow-lg" width="150" height="150"
                                            alt="@Model.FullName" style="object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img id="avatarPreview"
                                            src="https://ui-avatars.com/api/?name=@(Model.FullName?.Replace(" ", "+") ?? "User")&background=random&size=150"
                                            class="rounded-circle border-4 border-white shadow-lg" width="150" height="150"
                                            alt="@Model.FullName">
                                    }
                                    <button type="button"
                                        class="position-absolute bottom-0 right-0 btn btn-sm btn-primary rounded-circle p-2 shadow-sm"
                                        title="Đổi ảnh đại diện" id="changeAvatarBtn" data-bs-toggle="modal"
                                        data-bs-target="#avatarModal">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="2">
                                            <path
                                                d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z">
                                            </path>
                                            <circle cx="12" cy="13" r="4"></circle>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                            <div class="col">
                                <h1 class="h3 mb-1 font-weight-bold">@Model.FullName</h1>
                                <p class="text-muted mb-3">@Model.Email</p>
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge badge-primary px-3 py-2 rounded-pill">
                                        @(User.IsInRole("Landlord") ? "Chủ trọ" : "Người tìm trọ")
                                    </span>
                                    @if (Model.EmailConfirmed)
                                    {
                                        <span
                                            class="badge badge-success px-3 py-2 rounded-pill d-flex align-items-center gap-1">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none"
                                                stroke="currentColor" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            Email xác thực
                                        </span>
                                    }
                                    @if (Model.IsVerified)
                                    {
                                        <span
                                            class="badge badge-info px-3 py-2 rounded-pill d-flex align-items-center gap-1">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none"
                                                stroke="currentColor" stroke-width="2">
                                                <path
                                                    d="M22 11.08V5a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7">
                                                </path>
                                                <path d="M16 3v4"></path>
                                                <path d="M8 3v4"></path>
                                                <path d="M4 11h16"></path>
                                            </svg>
                                            Verified User
                                        </span>
                                    }
                                    @if (Model.IsActive && !Model.IsBlocked)
                                    {
                                        <span class="badge badge-success px-3 py-2 rounded-pill">Tài khoản hoạt động</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Profile Info Tabs -->
                <div class="glass-panel p-4 animate-scale-in" style="animation-delay: 0.1s;">
                    <ul class="nav nav-tabs border-bottom-0 pb-3" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active px-4" id="overview-tab" data-bs-toggle="tab"
                                data-bs-target="#overview" type="button" role="tab">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" style="display: inline; margin-right: 5px;">
                                    <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
                                    <path d="M21 3v5h-5"></path>
                                    <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
                                    <path d="M3 21v-5h5"></path>
                                </svg>
                                Tổng quan
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link px-4" id="details-tab" data-bs-toggle="tab" data-bs-target="#details"
                                type="button" role="tab">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" style="display: inline; margin-right: 5px;">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                </svg>
                                Chi tiết
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link px-4" id="security-tab" data-bs-toggle="tab" data-bs-target="#security"
                                type="button" role="tab">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" style="display: inline; margin-right: 5px;">
                                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                </svg>
                                Bảo mật
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content pt-4">
                        <!-- Overview Tab -->
                        <div class="tab-pane fade show active" id="overview" role="tabpanel">
                            <div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Thông tin liên lạc</h6>
                                        <div class="mb-3">
                                            <label class="text-muted small">Email</label>
                                            <p class="mb-0 font-weight-medium">@Model.Email</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-muted small">Số điện thoại</label>
                                            <p class="mb-0 font-weight-medium">@(Model.PhoneNumber ?? "Chưa cập nhật")</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Thông tin cơ bản</h6>
                                        <div class="mb-3">
                                            <label class="text-muted small">Tuổi</label>
                                            <p class="mb-0 font-weight-medium">@(Model.Age?.ToString() ?? "Chưa cập nhật")</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-muted small">Giới tính</label>
                                            <p class="mb-0 font-weight-medium">@(GetGenderLabel(Model.Gender) ?? "Chưa cập nhật")</p>
                                        </div>
                                    </div>
                                </div>

                                <hr class="border-glass opacity-50 my-4">

                                <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Thống kê</h6>
                                <div class="row text-center">
                                    <div class="col-md-3 mb-3 mb-md-0">
                                        <div class="p-3 bg-surface rounded-lg">
                                            <h3 class="mb-0 text-primary">@Model.TotalListings</h3>
                                            <small class="text-muted">Bài đăng</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3 mb-md-0">
                                        <div class="p-3 bg-surface rounded-lg">
                                            <h3 class="mb-0 text-success">@Model.SuccessfulBookings</h3>
                                            <small class="text-muted">Giao dịch thành công</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3 mb-md-0">
                                        <div class="p-3 bg-surface rounded-lg">
                                            <h3 class="mb-0 text-warning">@Model.TotalReviews</h3>
                                            <small class="text-muted">Đánh giá</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="p-3 bg-surface rounded-lg">
                                            <h3 class="mb-0 text-secondary">@Model.AverageRating.ToString("0.0")</h3>
                                            <small class="text-muted">Xếp hạng</small>
                                        </div>
                                    </div>
                                </div>

                                <hr class="border-glass opacity-50 my-4">

                                <div class="text-muted small">
                                    <p class="mb-1">
                                        <strong>Tham gia:</strong>
                                        @Model.CreatedAt.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="mb-1">
                                        <strong>Cập nhật lần cuối:</strong>
                                        @(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")
                                    </p>
                                    @if (Model.LastLoginAt.HasValue)
                                    {
                                        <p class="mb-0">
                                            <strong>Đăng nhập lần cuối:</strong>
                                            @Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Details Tab -->
                        <div class="tab-pane fade" id="details" role="tabpanel">
                            <div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Thông tin cá nhân</h6>
                                        <div class="mb-3">
                                            <label class="text-muted small">Nghề nghiệp</label>
                                            <p class="mb-0 font-weight-medium">@(Model.Occupation ?? "Chưa cập nhật")</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-muted small">Giới thiệu</label>
                                            <p class="mb-0 font-weight-medium">@(Model.Bio ?? "Chưa cập nhật")</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Tìm kiếm trọ</h6>
                                        <div class="mb-3">
                                            <label class="text-muted small">Khu vực</label>
                                            <p class="mb-0 font-weight-medium">@(Model.LivingArea ?? "Chưa cập nhật")</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-muted small">Ngân sách</label>
                                            <p class="mb-0 font-weight-medium">@(Model.Budget.HasValue ? Model.Budget.Value.ToString("C0")
                                                                                                : "Chưa cập nhật")</p>
                                        </div>
                                    </div>
                                </div>

                                <hr class="border-glass opacity-50 my-4">

                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Địa chỉ</h6>
                                        <div class="mb-3">
                                            <label class="text-muted small">Thành phố</label>
                                            <p class="mb-0 font-weight-medium">@(Model.City ?? "Chưa cập nhật")</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-muted small">Quận/Huyện</label>
                                            <p class="mb-0 font-weight-medium">@(Model.District ?? "Chưa cập nhật")</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted text-uppercase small mb-3">&nbsp;</h6>
                                        <div class="mb-3">
                                            <label class="text-muted small">Phường/Xã</label>
                                            <p class="mb-0 font-weight-medium">@(Model.Ward ?? "Chưa cập nhật")</p>
                                        </div>
                                    </div>
                                </div>

                                <hr class="border-glass opacity-50 my-4">

                                <div class="mb-3">
                                    <label class="text-muted small">Lối sống / Thói quen</label>
                                    <p class="mb-0 font-weight-medium">@(Model.Lifestyle ?? "Chưa cập nhật")</p>
                                </div>

                                <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary mt-3">Chỉnh sửa thông tin</a>
                            </div>
                        </div>

                        <!-- Security Tab -->
                        <div class="tab-pane fade" id="security" role="tabpanel">
                            <div>
                                <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Xác thực</h6>
                                <div class="list-group list-group-flush rounded-lg overflow-hidden">
                                    <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center py-3 border-glass">
                                        <div>
                                            <h6 class="mb-0 font-weight-bold">Email</h6>
                                            <small class="text-muted">@Model.Email</small>
                                        </div>
                                        @if (Model.EmailConfirmed)
                                        {
                                            <span class="badge badge-success">Đã xác thực</span>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                                                data-bs-target="#verifyEmailModal">Xác thực</button>
                                        }
                                    </div>

                                    <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center py-3 border-glass">
                                        <div>
                                            <h6 class="mb-0 font-weight-bold">Mật khẩu</h6>
                                            <small class="text-muted">Cập nhật lần cuối:
                                                @(Model.UpdatedAt?.ToString("dd/MM/yyyy") ?? "Chưa đặt")</small>
                                        </div>
                                        <a href="@Url.Action("ChangePassword", "Profile")"
                                            class="btn btn-sm btn-outline-primary">Đổi mật khẩu</a>
                                    </div>

                                    @if (Model.IsIdVerified)
                                    {
                                        <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center py-3 border-glass">
                                            <div>
                                                <h6 class="mb-0 font-weight-bold">Xác minh danh tính (CCCD)</h6>
                                                <small class="text-muted">Xác minh vào
                                                    @Model.IdVerificationDate?.ToString("dd/MM/yyyy")</small>
                                            </div>
                                            <span class="badge badge-success">Đã xác minh</span>
                                        </div>
                                    }
                                </div>

                                <hr class="border-glass opacity-50 my-4">

                                <h6 class="text-muted text-uppercase small mb-3 font-weight-bold">Hoạt động</h6>
                                <div class="list-group list-group-flush rounded-lg overflow-hidden">
                                    <a href="@Url.Action("LoginHistory", "Profile")"
                                        class="list-group-item list-group-item-action bg-transparent py-3 d-flex justify-content-between align-items-center border-glass hover-bg-light transition-fast">
                                        <div>
                                            <h6 class="mb-0 font-weight-bold">Lịch sử đăng nhập</h6>
                                            <small class="text-muted">Xem các thiết bị đã đăng nhập</small>
                                        </div>
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="2">
                                            <polyline points="9 18 15 12 9 6"></polyline>
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("ActivityHistory", "Profile")"
                                        class="list-group-item list-group-item-action bg-transparent py-3 d-flex justify-content-between align-items-center border-glass hover-bg-light transition-fast">
                                        <div>
                                            <h6 class="mb-0 font-weight-bold">Lịch sử hoạt động</h6>
                                            <small class="text-muted">Xem các hoạt động gần đây</small>
                                        </div>
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="2">
                                            <polyline points="9 18 15 12 9 6"></polyline>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Avatar Upload Modal -->
<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="avatarModalLabel">Đổi ảnh đại diện</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="avatarForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="avatarFile" class="form-label">Chọn ảnh (JPG, PNG, GIF - tối đa 5MB)</label>
                        <input class="form-control" type="file" id="avatarFile" name="avatarFile"
                            accept=".jpg,.jpeg,.png,.gif" required>
                        <small class="form-text text-muted">Ảnh sẽ được cắt thành hình tròn. Chọn ảnh có tỉ lệ 1:1 để
                            kết quả tốt nhất.</small>
                    </div>
                    <div id="uploadProgress" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                                style="width: 0%"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="uploadAvatarBtn">Tải lên</button>
            </div>
        </div>
    </div>
</div>

<!-- Verify Email Modal -->
<div class="modal fade" id="verifyEmailModal" tabindex="-1" aria-labelledby="verifyEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="verifyEmailModalLabel">Xác thực Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Chúng tôi sẽ gửi một liên kết xác thực đến email của bạn. Vui lòng kiểm tra hộp thư đến.</p>
                <div id="verifyMessage"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="sendVerificationBtn">Gửi liên kết xác thực</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Avatar Upload
        document.getElementById('uploadAvatarBtn').addEventListener('click', async function () {
            const fileInput = document.getElementById('avatarFile');
            const file = fileInput.files[0];

            if (!file) {
                alert('Vui lòng chọn một tệp.');
                return;
            }

            const formData = new FormData();
            formData.append('avatarFile', file);

            try {
                document.getElementById('uploadProgress').style.display = 'block';
                const response = await fetch('@Url.Action("UploadAvatar", "Profile")', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('avatarPreview').src = result.avatarUrl + '?' + new Date().getTime();
                    document.getElementById('avatarForm').reset();
                    bootstrap.Modal.getInstance(document.getElementById('avatarModal')).hide();
                    alert('Cập nhật ảnh đại diện thành công!');
                    location.reload();
                } else {
                    alert('Lỗi: ' + result.message);
                }
            } catch (error) {
                alert('Lỗi: ' + error.message);
            } finally {
                document.getElementById('uploadProgress').style.display = 'none';
            }
        });

        // Email Verification
        document.getElementById('sendVerificationBtn')?.addEventListener('click', async function () {
            try {
                const response = await fetch('@Url.Action("VerifyEmail", "Profile")', {
                    method: 'POST',
                    headers: {
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('verifyMessage').innerHTML = '<div class="alert alert-success">Liên kết xác thực đã được gửi! Vui lòng kiểm tra email của bạn.</div>';
                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('verifyEmailModal')).hide();
                    }, 2000);
                } else {
                    document.getElementById('verifyMessage').innerHTML = '<div class="alert alert-danger">' + result.message + '</div>';
                }
            } catch (error) {
                document.getElementById('verifyMessage').innerHTML = '<div class="alert alert-danger">Lỗi: ' + error.message + '</div>';
            }
        });
    </script>
}

@functions {
    private string? GetGenderLabel(string? gender)
    {
        return gender switch
        {
            "Male" => "Nam",
            "Female" => "Nữ",
            "Other" => "Khác",
            _ => null
        };
    }
}
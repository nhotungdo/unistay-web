@model Unistay_Web.Models.User.UserProfile
@using Unistay_Web.Helpers
@using Unistay_Web.Models.Connection
@{
    ViewData["Title"] = Model.FullName;
    string connectionStatus = ViewBag.ConnectionStatus as string ?? "None";
    int connectionId = ViewBag.ConnectionId != null ? (int)ViewBag.ConnectionId : 0;
    string currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<style>
    /* Reuse styles from Profile/Index.cshtml where possible or define simplified versions */
    .profile-header-bg {
        height: 320px;
        background: radial-gradient(circle at 10% 20%, rgb(80, 70, 229) 0%, rgb(15, 23, 42) 90%);
        background-size: cover;
        background-position: center;
        border-radius: 0 0 40px 40px;
        position: relative;
        margin-bottom: 80px;
    }
    
    .avatar-wrapper {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        padding: 4px;
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(10px);
    }
    
    .avatar-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--bg-surface);
    }
    
    .bento-card {
        background: var(--bg-surface);
        border: 1px solid var(--border-glass);
        border-radius: 20px;
        padding: 1.5rem;
        height: 100%;
        transition: transform 0.2s;
    }
    .bento-card:hover { transform: translateY(-3px); }
</style>

<div class="profile-header-bg" style="@(string.IsNullOrEmpty(Model.CoverPhotoUrl) ? "" : $"background-image: url('{Model.CoverPhotoUrl}');")">
    <div class="container h-100 position-relative"></div>
</div>

<div class="container pb-5" style="margin-top: -240px; position: relative; z-index: 10;">
    <!-- Profile Card with Actions -->
    <div class="glass-panel p-4 mb-4 animate-slide-up">
        <div class="row align-items-end">
            <div class="col-lg-auto text-center text-lg-start">
                 <div class="avatar-wrapper mx-auto mx-lg-0">
                    <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? $"https://ui-avatars.com/api/?name={Model.FullName?.Replace(" ", "+") ?? "User"}&background=random&size=160" : Model.AvatarUrl)"
                         class="avatar-image" alt="@Model.FullName">
                </div>
            </div>
            
            <div class="col-lg pt-3 pt-lg-0">
                 <div class="d-flex align-items-center justify-content-center justify-content-lg-start gap-2 mb-2">
                    <h1 class="display-6 fw-bold mb-0 text-white shadow-sm">@Model.FullName</h1>
                    @if (Model.IsVerified) {
                        <span class="badge bg-success-subtle text-success rounded-pill" title="Đã xác minh"><i class="bi bi-patch-check-fill"></i></span>
                    }
                </div>
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start gap-3 text-white-50 mb-3">
                    @if(!string.IsNullOrEmpty(Model.Occupation)) { <span><i class="bi bi-briefcase me-2"></i>@Model.Occupation</span> }
                    <span><i class="bi bi-geo-alt me-2"></i>@(Model.District ?? "Chưa rõ"), @(Model.City ?? "Hà Nội")</span>
                    <span class="badge bg-white bg-opacity-25 text-white border border-white border-opacity-25">
                         @(Model.Lifestyle ?? "Thành viên")
                    </span>
                </div>
            </div>

                <div class="d-flex gap-2 justify-content-center" id="action-buttons-container">
                    @if (connectionStatus == "Self")
                    {
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-pencil me-2"></i>Chỉnh sửa
                        </a>
                    }
                    else if (connectionStatus == "Accepted")
                    {
                         <a href="@Url.Action("StartChat", "Chat", new { userId = Model.Id })" class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-chat-dots-fill me-2"></i>Nhắn tin
                        </a>
                        <div class="dropdown">
                            <button class="btn btn-outline-light rounded-pill px-3" data-bs-toggle="dropdown">
                                <i class="bi bi-person-check-fill me-2"></i>Bạn bè
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li><button class="dropdown-item text-danger" onclick="removeConnection(@connectionId)">Hủy kết bạn</button></li>
                            </ul>
                        </div>
                    }
                    else if (connectionStatus == "Pending_Sent")
                    {
                        <button class="btn btn-secondary rounded-pill px-4" disabled>
                            <i class="bi bi-clock me-2"></i>Đã gửi lời mời
                        </button>
                         <a href="@Url.Action("StartChat", "Chat", new { userId = Model.Id })" class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-chat-dots me-2"></i>Nhắn tin
                        </a>
                    }
                    else if (connectionStatus == "Pending_Received")
                    {
                        <div class="btn-group">
                            <button class="btn btn-success rounded-pill px-4" onclick="respondRequest(@connectionId, 'accept')">
                                <i class="bi bi-check-lg me-2"></i>Chấp nhận
                            </button>
                            <button class="btn btn-danger rounded-pill px-3 ms-1" onclick="respondRequest(@connectionId, 'reject')">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                         <a href="@Url.Action("StartChat", "Chat", new { userId = Model.Id })" class="btn btn-primary rounded-pill px-4 ms-2">
                            <i class="bi bi-chat-dots me-2"></i>Nhắn tin
                        </a>
                    }
                    else // None or Declined
                    {
                        <button class="btn btn-primary rounded-pill px-4" id="btnAddFriend" onclick="sendFriendRequest('@Model.Id')">
                            <i class="bi bi-person-plus-fill me-2"></i>Kết bạn
                        </button>
                         <a href="@Url.Action("StartChat", "Chat", new { userId = Model.Id })" class="btn btn-outline-light rounded-pill px-4">
                            <i class="bi bi-chat-dots me-2"></i>Nhắn tin
                        </a>
                    }
                </div>
        </div>
    </div>

    <!-- Info Grid -->
    <div class="row g-4">
        <!-- Stats -->
        <div class="col-md-4">
             <div class="bento-card text-center d-flex flex-column justify-content-center">
                <div class="d-flex justify-content-around align-items-center">
                    <div>
                        <div class="display-6 fw-bold text-gradient">@Model.TotalListings</div>
                        <div class="small text-muted text-uppercase fw-bold">Bài đăng</div>
                    </div>
                    <div class="vr bg-secondary opacity-25" style="height: 40px;"></div>
                    <div>
                        <div class="display-6 fw-bold text-success">@Model.TotalReviews</div>
                         <div class="small text-muted text-uppercase fw-bold">Đánh giá</div>
                    </div>
                </div>
             </div>
        </div>
        
        <!-- Bio -->
        <div class="col-md-8">
            <div class="bento-card">
                <h5 class="fw-bold mb-3"><i class="bi bi-person-badge me-2 text-primary"></i>Giới thiệu</h5>
                @if (!string.IsNullOrEmpty(Model.Bio)) {
                    <p class="text-muted fs-5">@Model.Bio</p>
                } else {
                    <p class="text-muted fst-italic">Người dùng này chưa cập nhật giới thiệu.</p>
                }

                <div class="mt-4 pt-4 border-top border-glass row">
                     <div class="col-6">
                         <small class="text-muted d-block text-uppercase fw-bold mb-1">Nhu cầu</small>
                         <div class="fw-bold fs-5">@(Model.Budget.HasValue ? Model.Budget.Value.ToString("#,##0") + " đ" : "Thỏa thuận")</div>
                     </div>
                     <div class="col-6">
                         <small class="text-muted d-block text-uppercase fw-bold mb-1">Tham gia</small>
                         <div>@Model.CreatedAt.ToString("MM/yyyy")</div>
                     </div>
                </div>
            </div>
        </div>
        
        <!-- Private Info (Only for Friends?) - Technically Public Activity log is shown -->
        @if (ViewBag.Activities != null)
        {
             <div class="col-12">
                <div class="bento-card">
                    <h5 class="fw-bold mb-3">Hoạt động công khai</h5>
                    <div class="list-group list-group-flush">
                         @foreach (var activity in (List<Unistay_Web.Models.User.ActivityHistory>)ViewBag.Activities)
                        {
                            <div class="list-group-item bg-transparent border-bottom border-light px-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary-subtle p-2 me-3 text-primary">
                                         <i class="bi bi-clock-history"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 fw-bold">@activity.Description</p>
                                        <small class="text-muted">@activity.ActivityDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        async function sendFriendRequest(userId) {
            const btn = document.getElementById('btnAddFriend');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang gửi...';

            try {
                const res = await fetch('/api/connections/request', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ targetUserId: userId })
                });

                const data = await res.json();
                if (res.ok) {
                    btn.classList.remove('btn-primary');
                    btn.classList.add('btn-secondary');
                    btn.innerHTML = '<i class="bi bi-check2 me-2"></i>Đã gửi lời mời';
                    // Reload to update state fully if needed
                    setTimeout(() => location.reload(), 1000);
                } else {
                    alert(data.message);
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-person-plus-fill me-2"></i>Kết bạn';
                }
            } catch (e) {
                console.error(e);
                alert('Lỗi kết nối');
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-person-plus-fill me-2"></i>Kết bạn';
            }
        }

        async function respondRequest(connId, action) {
             try {
                const res = await fetch('/api/connections/respond', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ connectionId: connId, action: action })
                });
                
                if(res.ok) {
                    location.reload();
                } else {
                    alert('Lỗi xử lý.');
                }
             } catch(e) { console.error(e); }
        }


    </script>
}
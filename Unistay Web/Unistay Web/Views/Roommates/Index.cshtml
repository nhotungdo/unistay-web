@{
    ViewData["Title"] = "Tìm bạn cùng phòng";
}

<section style="padding: 2rem 0;">
    <div class="container">
        <!-- Header -->
        <div style="display:flex; justify-content:space-between; align-items:flex-end; margin-bottom: 2rem;">
            <div>
                <h1 class="h2 mb-2">Tìm bạn cùng phòng</h1>
                <p class="text-muted">Kết nối với những người bạn cùng sở thích và lối sống</p>
            </div>
            <div style="display:flex; gap:1rem;">
                <a asp-action="Match" class="btn btn-outline">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="mr-2" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                    Tìm người phù hợp
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="mr-2" stroke="currentColor" stroke-width="2">
                        <path d="M12 5v14M5 12h14"></path>
                    </svg>
                    Tạo hồ sơ
                </a>
            </div>
        </div>

        <!-- Filters (Glass Panel) -->
        <div class="glass-panel" style="padding: 1.5rem; margin-bottom: 3rem;">
             <form class="row g-3" style="display:flex; gap:1.5rem; align-items:flex-end; flex-wrap:wrap;">
                <div style="flex:1; min-width:200px;">
                    <label class="text-muted" style="margin-bottom:0.5rem; display:block; font-size:0.875rem; font-weight:600;">KHU VỰC</label>
                    <input type="text" class="form-input" placeholder="Nhập Quận/Huyện..." />
                </div>
                <div style="flex:1; min-width:150px;">
                     <label class="text-muted" style="margin-bottom:0.5rem; display:block; font-size:0.875rem; font-weight:600;">GIỚI TÍNH</label>
                     <select class="form-input">
                         <option>Tất cả</option>
                         <option>Nam</option>
                         <option>Nữ</option>
                     </select>
                </div>
                <div style="flex:1; min-width:150px;">
                    <label class="text-muted" style="margin-bottom:0.5rem; display:block; font-size:0.875rem; font-weight:600;">NGÂN SÁCH</label>
                    <select class="form-input">
                        <option>Tất cả</option>
                        <option>&lt; 2 triệu</option>
                        <option>2 - 4 triệu</option>
                        <option>&gt; 4 triệu</option>
                    </select>
                </div>
                <div>
                    <button class="btn btn-primary" style="width:100%;">Lọc kết quả</button>
                </div>
            </form>
        </div>

        <!-- Profiles Grid -->
        <div class="grid-3 animate-fade-in delay-100">
            <!-- Profile 1 -->
            <div class="modern-card p-0 text-center" style="overflow:visible; padding-top:3rem;">
                <div style="position:absolute; top:0; left:0; right:0; height:100px; background:var(--primary-gradient); border-radius:var(--radius-lg) var(--radius-lg) 0 0;"></div>
                
                <div style="position:relative; margin-bottom:1rem;">
                    <div style="width:100px; height:100px; margin:0 auto; border-radius:50%; border:4px solid white; overflow:hidden; box-shadow:var(--shadow-md);">
                         <img src="https://images.unsplash.com/photo-1599566150163-29194dcaad36?w=200&h=200&fit=crop" style="width:100%; height:100%; object-fit:cover;" alt="Avatar">
                    </div>
                </div>
                
                <div style="padding: 0 1.5rem 1.5rem;">
                    <h3 class="h5 mb-1">Nguyễn Văn Nam</h3>
                    <p class="text-muted small mb-3">Nam &bull; 22 tuổi &bull; Sinh viên ĐHKHTN</p>
                    
                    <div style="display:flex; justify-content:center; gap:0.5rem; margin-bottom:1.5rem; flex-wrap:wrap;">
                        <span class="badge badge-primary">Yên tĩnh</span>
                        <span class="badge badge-primary">Không hút thuốc</span>
                        <span class="badge badge-primary">Sạch sẽ</span>
                    </div>
                    
                    <div style="background:rgba(0,0,0,0.03); border-radius:var(--radius-md); padding:1rem; margin-bottom:1.5rem; text-align:left;">
                        <div style="display:flex; justify-content:space-between; margin-bottom:0.5rem;">
                            <span class="text-muted small">Khu vực:</span>
                            <span class="font-weight-medium small">Quận 1, Quận 5</span>
                        </div>
                        <div style="display:flex; justify-content:space-between;">
                            <span class="text-muted small">Ngân sách:</span>
                            <span class="text-primary font-weight-bold small">2 - 3 tr/tháng</span>
                        </div>
                    </div>
                    
                    <div style="display:flex; align-items:center; justify-content:center; gap:0.5rem; color:var(--success-color); font-weight:600; font-size:0.875rem; margin-bottom:1rem;">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                        </svg>
                        Phù hợp 85%
                    </div>
                    
                    <a asp-action="Profile" asp-route-id="1" class="btn btn-outline" style="width:100%;">Xem hồ sơ</a>
                </div>
            </div>

             <!-- Profile 2 -->
             <div class="modern-card p-0 text-center" style="overflow:visible; padding-top:3rem;">
                <div style="position:absolute; top:0; left:0; right:0; height:100px; background:var(--secondary-gradient); border-radius:var(--radius-lg) var(--radius-lg) 0 0;"></div>
                
                <div style="position:relative; margin-bottom:1rem;">
                    <div style="width:100px; height:100px; margin:0 auto; border-radius:50%; border:4px solid white; overflow:hidden; box-shadow:var(--shadow-md);">
                         <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=200&h=200&fit=crop" style="width:100%; height:100%; object-fit:cover;" alt="Avatar">
                    </div>
                </div>
                
                <div style="padding: 0 1.5rem 1.5rem;">
                    <h3 class="h5 mb-1">Trần Thị B</h3>
                    <p class="text-muted small mb-3">Nữ &bull; 20 tuổi &bull; Sinh viên ĐH Y Dược</p>
                    
                    <div style="display:flex; justify-content:center; gap:0.5rem; margin-bottom:1.5rem; flex-wrap:wrap;">
                        <span class="badge" style="background:rgba(236, 72, 153, 0.1); color:var(--secondary-500);">Hòa đồng</span>
                        <span class="badge" style="background:rgba(236, 72, 153, 0.1); color:var(--secondary-500);">Thích nấu ăn</span>
                    </div>
                    
                    <div style="background:rgba(0,0,0,0.03); border-radius:var(--radius-md); padding:1rem; margin-bottom:1.5rem; text-align:left;">
                        <div style="display:flex; justify-content:space-between; margin-bottom:0.5rem;">
                            <span class="text-muted small">Khu vực:</span>
                            <span class="font-weight-medium small">Quận 5, Quận 10</span>
                        </div>
                        <div style="display:flex; justify-content:space-between;">
                            <span class="text-muted small">Ngân sách:</span>
                            <span class="text-primary font-weight-bold small">1.5 - 2 tr/tháng</span>
                        </div>
                    </div>
                    
                    <div style="display:flex; align-items:center; justify-content:center; gap:0.5rem; color:var(--secondary-500); font-weight:600; font-size:0.875rem; margin-bottom:1rem;">
                         <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                        </svg>
                        Phù hợp 92%
                    </div>
                    
                    <a asp-action="Profile" asp-route-id="2" class="btn btn-outline" style="width:100%;">Xem hồ sơ</a>
                </div>
            </div>
            
            <!-- More Profiles -->
        </div>
    </div>
</section>

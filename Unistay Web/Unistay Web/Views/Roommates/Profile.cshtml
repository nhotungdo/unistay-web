@{
    ViewData["Title"] = "Hồ sơ tìm bạn trọ";
}

<section class="py-5">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb" style="display: flex; gap: 8px; list-style: none; padding: 0;">
                <li class="breadcrumb-item"><a href="/" class="text-muted text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item text-muted">/</li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-muted text-decoration-none">Tìm bạn trọ</a></li>
                <li class="breadcrumb-item text-muted">/</li>
                <li class="breadcrumb-item active" aria-current="page" style="color: var(--primary-600);">Nguyễn Văn Nam</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Left Column: Profile Card -->
            <div class="col-12 col-md-4 mb-4">
                <div class="card card-elevated sticky-top" style="top: 100px;">
                    <div class="card-body text-center p-4">
                        <div class="position-relative d-inline-block mb-3">
                            <img src="https://images.unsplash.com/photo-1599566150163-29194dcaad36?w=400&h=400&fit=crop" class="rounded-full border-4 border-white shadow-lg" style="width: 150px; height: 150px; object-fit: cover;" alt="Avatar">
                            <span class="position-absolute bottom-0 right-0 w-5 h-5 bg-success border-4 border-white rounded-full"></span>
                        </div>
                        
                        <h1 class="h3 mb-1">Nguyễn Văn Nam</h1>
                        <p class="text-muted mb-3">Nam • 22 tuổi • Sinh viên năm 4</p>
                        
                        <div class="d-flex justify-center flex-wrap gap-2 mb-4">
                            <span class="badge badge-primary bg-primary-50 text-primary-700 px-3 py-2 rounded-full">Yên tĩnh</span>
                            <span class="badge badge-primary bg-primary-50 text-primary-700 px-3 py-2 rounded-full">Sạch sẽ</span>
                            <span class="badge badge-primary bg-primary-50 text-primary-700 px-3 py-2 rounded-full">Không hút thuốc</span>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                </svg>
                                Nhắn tin
                            </button>
                            <button class="btn btn-outline-primary btn-lg">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                </svg>
                                Thêm vào yêu thích
                            </button>
                        </div>
                    </div>
                    <div class="card-footer bg-light p-3">
                        <div class="d-flex justify-between text-small">
                            <span class="text-muted">Tham gia:</span>
                            <span class="font-weight-medium">01/2024</span>
                        </div>
                        <div class="d-flex justify-between text-small mt-1">
                            <span class="text-muted">Phản hồi:</span>
                            <span class="font-weight-medium text-success">Rất nhanh</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Details -->
            <div class="col-12 col-md-8">
                <!-- About Me -->
                <div class="card card-elevated mb-4 animate-scale-in">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 d-flex align-center gap-2 text-primary">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            Giới thiệu bản thân
                        </h3>
                        <p class="text-muted line-height-relaxed mb-0">
                            Chào mọi người, mình là Nam, sinh viên năm cuối trường ĐH Khoa học Tự nhiên. 
                            Mình là người khá yên tĩnh, tập trung vào việc học và đi làm thêm. 
                            Mình tôn trọng sự riêng tư của người khác và mong muốn tìm bạn cùng phòng cũng vậy.
                            Mình thường nấu ăn ở nhà nên sẽ rất vui nếu bạn cùng phòng cũng thích nấu nướng hoặc cùng chia sẻ việc dọn dẹp.
                        </p>
                    </div>
                </div>

                <!-- Preferences -->
                <div class="card card-elevated mb-4 animate-scale-in" style="animation-delay: 0.1s;">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-4 d-flex align-center gap-2 text-primary">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                            </svg>
                            Tiêu chí tìm kiếm
                        </h3>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-muted font-size-xs font-weight-bold mb-2">Khu vực mong muốn</h6>
                                <p class="mb-0 font-weight-medium">Quận 1, Quận 5, Quận 10</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-muted font-size-xs font-weight-bold mb-2">Ngân sách dự kiến</h6>
                                <p class="mb-0 font-weight-medium text-success">2.000.000 - 3.000.000 VNĐ/tháng</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-muted font-size-xs font-weight-bold mb-2">Giới tính bạn trọ</h6>
                                <p class="mb-0 font-weight-medium">Nam</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-muted font-size-xs font-weight-bold mb-2">Thời điểm chuyển vào</h6>
                                <p class="mb-0 font-weight-medium">Ngay lập tức</p>
                            </div>
                        </div>

                        <hr class="my-4 border-neutral-200">

                        <h6 class="text-uppercase text-muted font-size-xs font-weight-bold mb-3">Thói quen sinh hoạt</h6>
                        <div class="d-flex flex-wrap gap-2">
                             <span class="border border-neutral-200 bg-light px-3 py-1 rounded-full text-small">Giờ giấc: Tự do</span>
                             <span class="border border-neutral-200 bg-light px-3 py-1 rounded-full text-small">Thú cưng: Không</span>
                             <span class="border border-neutral-200 bg-light px-3 py-1 rounded-full text-small">Khách đến chơi: Hạn chế</span>
                             <span class="border border-neutral-200 bg-light px-3 py-1 rounded-full text-small">Nấu ăn: Có</span>
                        </div>
                    </div>
                </div>

                <!-- Contact Info (Hidden) -->
                <div class="alert alert-info d-flex align-center gap-3">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="flex-shrink-0" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="16" x2="12" y2="12"></line>
                        <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    <div>
                        <strong>Thông tin liên hệ được ẩn</strong>
                        <p class="mb-0 small mt-1">Vui lòng đăng nhập hoặc nhắn tin để trao đổi thông tin liên lạc.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

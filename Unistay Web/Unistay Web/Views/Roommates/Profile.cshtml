@model Unistay_Web.Models.Roommate.RoommateProfileDetailViewModel

@{
    ViewData["Title"] = "Hồ sơ: " + Model.FullName;
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        --score-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --glass-bg: rgba(255, 255, 255, 0.8);
    }

    .profile-header {
        background: radial-gradient(circle at top right, #f3e8ff 0%, #ffffff 50%, #e0e7ff 100%);
        padding-top: 3rem;
        padding-bottom: 5rem;
        margin-bottom: -4rem;
    }

    .glass-card {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .avatar-lg {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        border: 6px solid white;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        object-fit: cover;
    }

    .match-circle {
        position: relative;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.2);
    }

    .match-circle::before {
        content: '';
        position: absolute;
        inset: -5px;
        border-radius: 50%;
        background: var(--score-gradient);
        z-index: -1;
        opacity: 0.3;
    }

    .score-value {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--score-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .feature-bar {
        height: 8px;
        background: #e5e7eb;
        border-radius: 4px;
        overflow: hidden;
        margin-top: 5px;
    }

    .feature-progress {
        height: 100%;
        background: var(--primary-gradient);
        border-radius: 4px;
        transition: width 1s ease-out;
    }

    .interest-tag {
        background: #f3f4f6;
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.9rem;
        color: #4b5563;
        font-weight: 500;
        display: inline-block;
        margin-right: 8px;
        margin-bottom: 8px;
    }

    .interest-tag.shared {
        background: #ecfdf5;
        color: #059669;
        border: 1px solid #d1fae5;
    }

    .section-title {
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .ai-report-box {
        background: linear-gradient(to right, #f0f9ff, #e0f2fe);
        border-left: 5px solid #0ea5e9;
        padding: 1.5rem;
        border-radius: 12px;
    }
</style>

<div class="profile-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8 d-flex align-items-center gap-4">
                <img src="@(!string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : "/images/default-avatar.png")"
                    class="avatar-lg" alt="@Model.FullName"
                    onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.FullName)&background=random'">
                <div>
                    <h1 class="display-5 fw-bold mb-1">@Model.FullName</h1>
                    <p class="text-secondary fs-5 mb-2">
                        @(Model.Age > 0 ? $"{Model.Age} tuổi" : "")
                        • @(Model.Occupation ?? "Chưa cập nhật nghề nghiệp")
                    </p>
                    <div class="d-flex gap-2">
                        <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                            <i class="bi bi-geo-alt-fill text-danger me-1"></i> @(Model.PreferredArea ?? "Toàn quốc")
                        </span>
                        <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                            <i class="bi bi-gender-ambiguous text-primary me-1"></i> @(Model.Gender ?? "Không xác định")
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center text-md-end mt-4 mt-md-0">

                <br>
                <button class="btn btn-outline-secondary rounded-pill px-4 border-2 fw-bold mb-2">
                    <i class="bi bi-heart me-1"></i> Quan tâm
                </button>
                <br>
                <div id="friend-action-container" class="d-inline-block">
                    @if (Model.ConnectionState == "none")
                    {
                        <button onclick="sendFriendRequest('@Model.UserId', this)" class="btn btn-outline-primary rounded-pill px-4 border-2 fw-bold">
                            <i class="bi bi-person-plus-fill me-1"></i> Thêm bạn
                        </button>
                    }
                    else if (Model.ConnectionState == "pending_sent")
                    {
                        <button class="btn btn-secondary rounded-pill px-4 border-2 fw-bold" disabled>
                            <i class="bi bi-clock-history me-1"></i> Đã gửi
                        </button>
                    }
                    else if (Model.ConnectionState == "pending_received")
                    {
                        <div class="d-flex gap-2 justify-content-end">
                            <button onclick="respondFriendRequest('@Model.ConnectionId', 'accept', this)" class="btn btn-success rounded-pill px-3 fw-bold">
                                Chấp nhận
                            </button>
                            <button onclick="respondFriendRequest('@Model.ConnectionId', 'reject', this)" class="btn btn-outline-danger rounded-pill px-3 fw-bold">
                                Từ chối
                            </button>
                        </div>
                    }
                    else if (Model.ConnectionState == "accepted")
                    {
                        <button class="btn btn-success rounded-pill px-4 border-2 fw-bold" disabled>
                            <i class="bi bi-check-circle-fill me-1"></i> Bạn bè
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-4">
        <!-- Left Column: AI Analysis -->
        <div class="col-lg-4">
            <div class="glass-card p-4 h-100">
                <h3 class="section-title"><i class="bi bi-cpu text-primary"></i> AI Phân tích</h3>

                <div class="mb-4">
                    <form method="get" class="d-flex align-items-center gap-2">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <label class="small text-muted fw-bold mb-0 text-nowrap">Ưu tiên:</label>
                        <select name="priority" class="form-select form-select-sm rounded-pill"
                            onchange="this.form.submit()">
                            @foreach (var p in new[] { "Balanced", "Budget", "Lifestyle", "Personality" })
                            {
                                bool isSelected = (ViewBag.CurrentPriority as string)?.ToLower() == p.ToLower();
                                if (isSelected)
                                {
                                    <option value="@p" selected>@p</option>
                                }
                                else
                                {
                                    <option value="@p">@p</option>
                                }
                            }
                        </select>
                    </form>
                </div>

                @if (Model.CompatibilityScore > 0)
                {
                    <div class="d-flex flex-column align-items-center mb-4">
                        <div class="match-circle mb-3">
                            <div class="text-center">
                                <div class="score-value">@Model.CompatibilityScore%</div>
                                <div class="small text-muted fw-bold">TƯƠNG HỢP</div>
                            </div>
                        </div>
                        <p class="text-center text-muted small">Dựa trên phân tích ngân sách, lối sống và sở thích.</p>
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold text-uppercase small text-muted mb-3">Chi tiết điểm số</h6>
                        @if (Model.CompatibilityBreakdown != null)
                        {
                            foreach (var item in Model.CompatibilityBreakdown)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <span class="fw-bold">@item.Key</span>
                                        <span class="text-primary">@item.Value%</span>
                                    </div>
                                    <div class="feature-bar">
                                        <div class="feature-progress" style="width: @item.Value%"></div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    @if (Model.SharedInterests != null && Model.SharedInterests.Any())
                    {
                        <div class="mb-3">
                            <h6 class="fw-bold text-uppercase small text-muted mb-2">Điểm chung</h6>
                            <div>
                                @foreach (var interest in Model.SharedInterests)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill me-1 mb-1">
                                        <i class="bi bi-check2 me-1"></i>@interest
                                    </span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-lock-fill display-4 text-muted mb-3 d-block"></i>
                        <p>Đăng nhập để xem phân tích AI chi tiết về mức độ phù hợp với người này.</p>
                        <a href="/Account/Login" class="btn btn-outline-primary rounded-pill">Đăng nhập ngay</a>
                    </div>
                }
            </div>
        </div>

        <!-- Right Column: Details -->
        <div class="col-lg-8">
            <div class="glass-card p-4 mb-4">
                <h3 class="section-title"><i class="bi bi-person-lines-fill text-primary"></i> Thông tin chi tiết</h3>

                <div class="ai-report-box mb-4">
                    <h5 class="fw-bold mb-2"><i class="bi bi-stars text-warning me-2"></i>Đánh giá từ AI</h5>
                    <p class="mb-0 text-dark" style="line-height: 1.6;">@Model.AiAnalysisReport</p>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-4 border">
                            <h6 class="text-muted text-uppercase small fw-bold mb-2">Ngân sách</h6>
                            <p class="h4 text-primary fw-bold mb-0">
                                @(Model.Budget > 0 ? Model.Budget.ToString("N0") + " đ" : "Thỏa thuận")
                                <small class="text-muted fs-6 fw-normal">/tháng</small>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-4 border">
                            <h6 class="text-muted text-uppercase small fw-bold mb-2">Ngày chuyển vào</h6>
                            <p class="h5 text-dark fw-bold mb-0">
                                @(Model.MoveInDate.HasValue? Model.MoveInDate.Value.ToString("dd/MM/yyyy") : "Sớm nhất                       có thể")
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Giới thiệu bản thân</h5>
                    <p class="text-muted" style="white-space: pre-line;">
                        @(string.IsNullOrEmpty(Model.Bio) ? "Người dùng này chưa viết giới thiệu bản thân." : Model.Bio)
                    </p>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Thói quen & Sở thích</h5>
                    <div>
                        @if (Model.Habits != null && Model.Habits.Any())
                        {
                            foreach (var habit in Model.Habits)
                            {
                                bool isShared = Model.SharedInterests != null && Model.SharedInterests.Contains(habit);
                                <span class="interest-tag @(isShared ? "shared" : "")">
                                    @habit
                                </span>
                            }
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Chưa cập nhật</span>
                        }
                    </div>
                </div>

                @if (Model.PotentialConflicts != null && Model.PotentialConflicts.Any())
                {
                    <div class="alert alert-warning border-0 bg-warning bg-opacity-10 rounded-4">
                        <h6 class="fw-bold text-warning-emphasis"><i class="bi bi-exclamation-triangle-fill me-2"></i>Lưu ý
                            tiềm năng</h6>
                        <ul class="mb-0 ps-3 text-warning-emphasis small">
                            @foreach (var conflict in Model.PotentialConflicts)
                            {
                                <li>@conflict</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        async function sendFriendRequest(targetUserId, btnElement) {
            try {
                const originalContent = btnElement.innerHTML;
                btnElement.disabled = true;
                btnElement.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';

                const response = await fetch('/api/connections/request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ targetUserId: targetUserId })
                });

                if (response.ok) {
                    const container = document.getElementById('friend-action-container');
                    container.innerHTML = `<button class="btn btn-secondary rounded-pill px-4 border-2 fw-bold" disabled>
                                <i class="bi bi-clock-history me-1"></i> Đã gửi
                            </button>`;
                } else {
                    const data = await response.json();
                    alert(data.message || 'Có lỗi xảy ra');
                    btnElement.disabled = false;
                    btnElement.innerHTML = originalContent;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi kết nối');
                btnElement.disabled = false;
            }
        }

        async function respondFriendRequest(connectionId, action, btnElement) {
            try {
                const originalContent = btnElement.innerHTML;
                const container = document.getElementById('friend-action-container');
                // Disable all buttons in container
                const buttons = container.querySelectorAll('button');
                buttons.forEach(b => b.disabled = true);
                btnElement.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';

                const response = await fetch('/api/connections/respond', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ connectionId: parseInt(connectionId), action: action })
                });

                if (response.ok) {
                    if (action === 'accept') {
                        container.innerHTML = `<button class="btn btn-success rounded-pill px-4 border-2 fw-bold" disabled>
                                <i class="bi bi-check-circle-fill me-1"></i> Bạn bè
                            </button>`;
                    } else {
                        // If rejected, we can reload or show "Add Friend" again
                         location.reload();
                    }
                } else {
                    const data = await response.json();
                    alert(data.message || 'Có lỗi xảy ra');
                    buttons.forEach(b => b.disabled = false);
                    btnElement.innerHTML = originalContent;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi kết nối');
                location.reload();
            }
        }
    </script>
}
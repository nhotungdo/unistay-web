@model Unistay_Web.Models.Roommate.RoommateProfile
@{
    ViewData["Title"] = "Tạo hồ sơ tìm bạn trọ";
}

<section class="py-5 bg-light">
    <div class="container mb-5">
        <div class="row justify-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="text-center mb-5">
                    <h1 class="h2 mb-2">Tạo hồ sơ tìm bạn trọ</h1>
                    <p class="text-muted">Cập nhật thông tin để tìm người bạn cùng phòng lý tưởng</p>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    
                    <!-- Basic Info -->
                    <div class="card card-elevated mb-4 animate-scale-in">
                        <div class="card-body p-4">
                            <h3 class="h5 mb-4 text-primary">Thông tin cá nhân</h3>
                            
                            <div class="row align-center mb-4">
                                <div class="col-auto">
                                    <div class="position-relative">
                                        <div class="w-20 h-20 rounded-full bg-neutral-200 d-flex align-center justify-center overflow-hidden" id="avatarPreviewContainer">
                                            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" class="text-muted" stroke="currentColor" stroke-width="2">
                                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="12" cy="7" r="4"></circle>
                                            </svg>
                                        </div>
                                        <label for="avatarUpload" class="btn btn-sm btn-primary rounded-full position-absolute bottom-0 right-0 p-1" style="width: 32px; height: 32px;">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                <polyline points="17 8 12 3 7 8"></polyline>
                                                <line x1="12" y1="3" x2="12" y2="15"></line>
                                            </svg>
                                        </label>
                                        <input type="file" id="avatarUpload" class="d-none" accept="image/*" />
                                    </div>
                                </div>
                                <div class="col">
                                    <h5 class="mb-1">Ảnh đại diện</h5>
                                    <p class="text-muted small mb-0">Tải lên ảnh rõ mặt để tăng độ tin cậy. Hỗ trợ JPG, PNG.</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Họ và tên</label>
                                    <input type="text" class="form-control" placeholder="Nguyễn Văn A" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Giới tính</label>
                                    <select class="form-select form-control">
                                        <option value="">Chọn giới tính</option>
                                        <option value="Male">Nam</option>
                                        <option value="Female">Nữ</option>
                                        <option value="Other">Khác</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Năm sinh</label>
                                    <input type="number" class="form-control" placeholder="2003" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nghề nghiệp/Trường học</label>
                                    <input type="text" class="form-control" placeholder="Sinh viên ĐHKHTN" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Giới thiệu bản thân</label>
                                <textarea class="form-control" rows="4" placeholder="Viết một đoạn ngắn về bản thân, sở thích, lối sống..."></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Preferences -->
                    <div class="card card-elevated mb-4 animate-scale-in" style="animation-delay: 0.1s;">
                         <div class="card-body p-4">
                            <h3 class="h5 mb-4 text-primary">Tiêu chí tìm bạn/phòng</h3>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Khu vực mong muốn</label>
                                    <input type="text" class="form-control" placeholder="VD: Quận 1, Quận 5" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Ngân sách (VNĐ/tháng)</label>
                                    <div class="d-flex gap-2">
                                        <input type="number" class="form-control" placeholder="Tối thiểu" />
                                        <span class="align-self-center">-</span>
                                        <input type="number" class="form-control" placeholder="Tối đa" />
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label d-block mb-3">Thói quen & Lối sống</label>
                                <div class="row g-3">
                                    <div class="col-6 col-md-4">
                                         <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="smoking">
                                            <label class="form-check-label" for="smoking">Không hút thuốc</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4">
                                         <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="pet">
                                            <label class="form-check-label" for="pet">Nuôi thú cưng</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4">
                                         <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="cooking">
                                            <label class="form-check-label" for="cooking">Thích nấu ăn</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4">
                                         <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="clean">
                                            <label class="form-check-label" for="clean">Ngăn nắp, sạch sẽ</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4">
                                         <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="quiet">
                                            <label class="form-check-label" for="quiet">Yên tĩnh</label>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4">
                                         <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="party">
                                            <label class="form-check-label" for="party">Thích tụ tập</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         </div>
                    </div>

                    <div class="d-flex gap-3 justify-end">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">Hoàn tất</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Simple avatar preview
        document.getElementById('avatarUpload').addEventListener('change', function(e) {
            if (this.files && this.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const container = document.getElementById('avatarPreviewContainer');
                    container.innerHTML = `<img src="${e.target.result}" class="w-100 h-100 object-cover" alt="Preview">`;
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
}

@model List<Unistay_Web.Models.Roommate.RoommateDisplayDto>

@{
    ViewData["Title"] = "Tìm người phù hợp";
}

<style>
    .match-container {
        position: relative;
        width: 100%;
        max-width: 400px;
        height: 600px; /* Increased height */
        margin: 0 auto;
    }

    .match-card {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        transition: all 0.5s ease-out;
        opacity: 0;
        transform: scale(0.95) translateY(10px);
        pointer-events: none;
        z-index: 1;
    }

    .match-card.active {
        opacity: 1;
        transform: scale(1) translateY(0);
        pointer-events: all;
        z-index: 10;
    }

    .match-card.leaving {
        transform: translateX(-150%) rotate(-20deg) !important;
        opacity: 0;
    }
    
    .match-card.liking {
         transform: translateX(150%) rotate(20deg) !important;
        opacity: 0;
    }

    .match-card.next {
        opacity: 0.5;
        transform: scale(0.95);
        z-index: 5;
    }
    
    .btn-action {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .btn-action:hover {
        transform: scale(1.1);
    }
    
    .btn-pass {
        background: white;
        color: #ef4444;
        border: 2px solid #ef4444;
    }
    
    .btn-like {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        color: white;
    }

    .match-badge {
         background: rgba(16, 185, 129, 0.1);
         color: #10b981;
         padding: 0.5rem 1rem;
         border-radius: 50px;
         font-weight: 700;
         display: inline-flex;
         align-items: center;
         gap: 0.5rem;
    }
</style>

<section class="py-5 bg-light" style="min-height: 90vh;">
    <div class="container h-100 d-flex flex-column">
        <div class="text-center mb-4">
            <h1 class="h2 mb-2 fw-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600" style="background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Tìm bạn trọ phù hợp</h1>
            <p class="text-muted">AI đã phân tích và tìm ra những người phù hợp nhất với bạn</p>
        </div>

        <div class="flex-1 d-flex align-items-center justify-content-center w-100">
            @if (Model != null && Model.Any())
            {
                <div class="match-container" id="cardStack">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <div class="match-card @(i == 0 ? "active" : (i == 1 ? "next" : ""))" data-index="@i">
                            <div class="card card-elevated h-100 shadow-lg rounded-4 overflow-hidden border-0">
                                <div class="position-relative h-50">
                                    <img src="@(!string.IsNullOrEmpty(item.AvatarUrl) ? item.AvatarUrl : "/images/default-avatar.png")" 
                                         class="w-100 h-100" 
                                         style="object-fit: cover;"
                                         alt="@item.FullName"
                                         onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(item.FullName)&background=random'">
                                    
                                    <div class="position-absolute bottom-0 start-0 w-100 p-3" style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);">
                                        <h3 class="h4 mb-0 text-white fw-bold">@item.FullName, @(item.Age > 0 ? item.Age : "??")</h3>
                                        <p class="small mb-0 text-white-50">@(item.Occupation ?? "Nghề nghiệp chưa cập nhật")</p>
                                    </div>
                                </div>
                                <div class="card-body p-4 d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="match-badge">
                                            <i class="bi bi-stars"></i>
                                            @item.MatchPercentage% Tương hợp
                                        </div>
                                        <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                                            <i class="bi bi-geo-alt me-1"></i> @item.PreferredArea
                                        </span>
                                    </div>
                                    
                                    <div class="flex-grow-1">
                                         <div class="d-flex flex-wrap gap-2 mb-3">
                                            @foreach (var habit in item.Habits.Take(4))
                                            {
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary border-0"><i class="bi bi-check2 me-1"></i>@habit</span>
                                            }
                                        </div>
                                        
                                        <div class="d-flex justify-content-between text-small text-muted mb-2">
                                            <span>Ngân sách:</span>
                                            <span class="fw-bold text-dark">@(item.Budget > 0 ? item.Budget.ToString("N0") : "Thỏa thuận") đ</span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center gap-4 mt-auto pt-3 border-top">
                                        <button class="btn-action btn-pass" onclick="handleAction('pass')">
                                            <i class="bi bi-x-lg fs-4"></i>
                                        </button>
                                        <a href="/Roommates/Profile/@item.Id" class="btn-action btn-light text-primary border" title="Xem chi tiết">
                                            <i class="bi bi-info-lg fs-4"></i>
                                        </a>
                                        <button class="btn-action btn-like" onclick="handleAction('like')">
                                            <i class="bi bi-heart-fill fs-4"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <!-- Empty State (Hidden initially) -->
                    <div class="match-card d-flex align-items-center justify-content-center" id="emptyState" style="z-index: 0;">
                        <div class="text-center p-4">
                            <div class="mb-3 text-muted display-1"><i class="bi bi-check-circle"></i></div>
                            <h3>Hết danh sách gợi ý!</h3>
                            <p class="text-muted">Bạn đã xem hết các hồ sơ phù hợp hiện tại.</p>
                            <a href="/Roommates" class="btn btn-outline-primary rounded-pill mt-3">Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                 <div class="text-center py-5">
                    <div class="mb-3 text-muted display-1"><i class="bi bi-search"></i></div>
                    <h3>Chưa tìm thấy người phù hợp</h3>
                    <p class="text-muted">Hãy cập nhật hồ sơ của bạn chi tiết hơn để AI phân tích chính xác.</p>
                    <a href="/Roommates/Create" class="btn btn-primary mt-3 rounded-pill px-4">Cập nhật hồ sơ</a>
                </div>
            }
        </div>
        
        <div class="text-center mt-5 text-muted small">
            <p>Sử dụng nút X hoặc Tim để tương tác</p>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        let currentIndex = 0;
        const totalCards = @(Model != null ? Model.Count : 0);
        
        function handleAction(action) {
            if (currentIndex >= totalCards) return;
            
            const cards = document.querySelectorAll('.match-card:not(#emptyState)');
            const currentCard = cards[currentIndex];
            const nextCard = cards[currentIndex + 1];
            
            // Animate current card
            if (action === 'like') {
                currentCard.classList.add('liking');
                // Could call API to save "Like" here
            } else {
                currentCard.classList.add('leaving');
            }
            
            // Prepare next card
            setTimeout(() => {
                currentCard.classList.remove('active');
                currentCard.style.display = 'none'; // Cleanup
                
                if (nextCard) {
                    nextCard.classList.add('active');
                    nextCard.classList.remove('next');
                    
                    // Prepare the one after next
                    const nextNextCard = cards[currentIndex + 2];
                    if (nextNextCard) {
                        nextNextCard.classList.add('next');
                    }
                } else {
                    // Show empty state
                     document.getElementById('emptyState').classList.add('active');
                }
                
                currentIndex++;
            }, 300); // Wait for transition
        }
    </script>
}

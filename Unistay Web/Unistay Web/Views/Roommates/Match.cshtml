@{
    ViewData["Title"] = "Tìm người phù hợp";
}

<section class="py-5 bg-light" style="min-height: 80vh;">
    <div class="container h-100 d-flex flex-column">
        <div class="text-center mb-5">
            <h1 class="h2 mb-2">Tìm bạn trọ phù hợp</h1>
            <p class="text-muted">Chúng tôi sẽ gợi ý những người có độ tương hợp cao nhất với bạn</p>
        </div>

        <div class="flex-1 d-flex align-center justify-center">
            <!-- Swipe Card Container -->
            <div class="position-relative w-100" style="max-width: 400px; height: 500px;">
                
                <!-- Card 1 -->
                <div class="card card-elevated h-100 position-absolute w-100" style="z-index: 3; transform: scale(1);">
                    <div class="position-relative h-60 overflow-hidden rounded-top-xl">
                        <img src="https://images.unsplash.com/photo-1599566150163-29194dcaad36?w=400&h=400&fit=crop" class="w-100 h-100 object-cover" alt="User">
                        <div class="position-absolute bottom-0 left-0 w-100 p-3 bg-gradient-to-t from-black-50 to-transparent text-white">
                            <h3 class="h4 mb-0">Nguyễn Văn Nam, 22</h3>
                            <p class="small mb-0 opacity-90">Sinh viên ĐHKHTN</p>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-between align-center mb-3">
                            <div class="text-success font-weight-bold d-flex align-center gap-1">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                                </svg>
                                95% Phù hợp
                            </div>
                            <span class="badge badge-primary bg-primary-50 text-primary-700">Quận 5</span>
                        </div>
                        
                        <p class="text-muted line-clamp-3 mb-4">
                            Mình là người hướng nội, thích đọc sách và nghe nhạc. Đang tìm bạn ở ghép khu vực gần trường KHTN. Sạch sẽ và tôn trọng riêng tư.
                        </p>

                        <div class="d-flex justify-center gap-4">
                            <button class="btn btn-outline-error rounded-full p-3 shadow-md hover:scale-110 transition-transform">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                    <line x1="6" y1="6" x2="18" y2="18"></line>
                                </svg>
                            </button>
                             <button class="btn btn-primary rounded-full p-3 shadow-md hover:scale-110 transition-transform">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Card 2 (Background) -->
                <div class="card card-elevated h-100 position-absolute w-100 bg-white" style="z-index: 2; transform: scale(0.95); top: 10px; opacity: 0.8;">
                     <!-- Placeholder content -->
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <p class="text-muted small">Sử dụng phím mũi tên trái/phải để Bỏ qua hoặc Thích</p>
        </div>
    </div>
</section>

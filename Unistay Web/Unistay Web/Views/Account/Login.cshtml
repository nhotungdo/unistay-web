@{
    ViewData["Title"] = "Đăng nhập";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-center">
            <div class="col-12 col-md-10 col-lg-5">
                <div class="glass-panel animate-fade-in" style="padding: 2.5rem;">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="d-flex justify-center mb-3">
                            <div style="width: 48px; height: 48px; background: var(--primary-500); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                    <polyline points="10 17 15 12 10 7"></polyline>
                                    <line x1="15" y1="12" x2="3" y2="12"></line>
                                </svg>
                            </div>
                        </div>
                        <h2 class="mb-2">Chào mừng trở lại</h2>
                        <p class="text-muted">Đăng nhập để tiếp tục với <span class="text-gradient font-weight-bold">Unistay</span></p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div style="background: rgba(239, 68, 68, 0.1); color: var(--danger-color); padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1.5rem;">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="m-0 small">@error.ErrorMessage</p>
                            }
                        </div>
                    }
                    
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        
                        <!-- Email Field -->
                        <div class="mb-3">
                            <label class="text-muted small font-weight-bold mb-1" style="display:block;">EMAIL</label>
                            <input type="email" name="email" class="form-input" placeholder="example@email.com" required />
                        </div>
                        
                        <!-- Password Field -->
                        <div class="mb-4">
                            <label class="text-muted small font-weight-bold mb-1" style="display:block;">MẬT KHẨU</label>
                            <input type="password" name="password" class="form-input" placeholder="••••••••" required />
                        </div>
                        
                        <!-- Remember Me & Forgot Password -->
                        <div class="d-flex justify-between align-center mb-4">
                            <div class="d-flex align-center gap-2">
                                <input type="checkbox" id="rememberMe" name="rememberMe" style="width: 1rem; height: 1rem; border-radius: 4px; border: 2px solid var(--primary-500);" />
                                <label for="rememberMe" class="text-muted small">Ghi nhớ đăng nhập</label>
                            </div>
                            <a asp-action="ForgotPassword" class="text-primary small font-weight-medium">Quên mật khẩu?</a>
                        </div>
                        
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 mb-4">
                            Đăng nhập
                        </button>
                        
                        <!-- Divider -->
                        <div class="d-flex align-center gap-3 mb-4">
                            <div style="flex: 1; height: 1px; background: var(--border-glass);"></div>
                            <span class="text-muted small">hoặc</span>
                            <div style="flex: 1; height: 1px; background: var(--border-glass);"></div>
                        </div>
                    </form>
                    
                    <!-- Social Login -->
                    <div class="d-flex gap-2 mb-4">
                        <form asp-action="GoogleLogin" method="get" class="w-100">
                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                            <button type="submit" class="btn btn-outline w-100">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                </svg>
                                Đăng nhập với Google
                            </button>
                        </form>
                    </div>
                    
                    <!-- Register Link -->
                    <div class="text-center">
                        <p class="text-muted mb-0 small">
                            Chưa có tài khoản? 
                            <a asp-action="Register" class="text-primary font-weight-bold">Đăng ký ngay</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

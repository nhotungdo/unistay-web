    <script>
    function updateUserType(radio) {
        // Reset styles
        const studentLbl = document.getElementById('lbl-student');
        const landlordLbl = document.getElementById('lbl-landlord');
        
        studentLbl.style.background = 'transparent';
        studentLbl.style.borderColor = 'var(--text-light)';
        studentLbl.classList.remove('text-primary');
        
        landlordLbl.style.background = 'transparent';
        landlordLbl.style.borderColor = 'var(--text-light)';
        landlordLbl.classList.remove('text-primary');
        
        // Apply active style
        if (radio.checked) {
            const activeLbl = radio.closest('label');
            activeLbl.style.background = 'rgba(99, 102, 241, 0.05)';
            activeLbl.style.borderColor = 'var(--primary-600)';
            activeLbl.classList.add('text-primary');
            // Add a glow effect
            activeLbl.style.boxShadow = '0 0 0 4px rgba(99, 102, 241, 0.1)';
        }
        
         // Reset box shadow for non-active
        if(!radio.checked){
             // this logic is slightly flawed because we are iterating or triggering on change. 
             // Better to just clear all first.
        }
        
        // Clear shadows
        studentLbl.style.boxShadow = 'none';
        landlordLbl.style.boxShadow = 'none';
        
        // Re-apply to active
         if (radio.checked) {
            const activeLbl = radio.closest('label');
             activeLbl.style.boxShadow = '0 0 0 4px rgba(99, 102, 241, 0.1)';
         }
    }
    

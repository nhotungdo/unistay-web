@{
    ViewData["Title"] = "Đăng ký";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-center">
            <div class="col-12 col-md-10 col-lg-6">
                <div class="glass-panel animate-fade-in" style="padding: 2.5rem;">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="d-flex justify-center mb-3">
                            <div style="width: 48px; height: 48px; background: var(--secondary-500); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="8.5" cy="7" r="4"></circle>
                                    <polyline points="17 11 19 13 23 9"></polyline>
                                </svg>
                            </div>
                        </div>
                        <h2 class="mb-2">Tạo tài khoản mới</h2>
                        <p class="text-muted">Tham gia cộng đồng <span class="text-gradient font-weight-bold">Unistay</span> ngay hôm nay</p>
                    </div>
                    
                    <form asp-action="Register" method="post">
                        <!-- Full Name -->
                        <div class="mb-3">
                            <label class="text-muted small font-weight-bold mb-1" style="display:block;">HỌ VÀ TÊN</label>
                            <input type="text" name="fullName" class="form-input" placeholder="Nguyễn Văn A" required />
                        </div>
                        
                        <!-- Email -->
                        <div class="mb-3">
                            <label class="text-muted small font-weight-bold mb-1" style="display:block;">EMAIL</label>
                            <input type="email" name="email" class="form-input" placeholder="example@email.com" required />
                        </div>
                        
                        <!-- Phone -->
                        <div class="mb-3">
                            <label class="text-muted small font-weight-bold mb-1" style="display:block;">SỐ ĐIỆN THOẠI</label>
                            <input type="tel" name="phone" class="form-input" placeholder="0912345678" required />
                        </div>
                        
                        <!-- Password -->
                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="text-muted small font-weight-bold mb-1" style="display:block;">MẬT KHẨU</label>
                                <input type="password" name="password" class="form-input" placeholder="Tối thiểu 8 ký tự" required minlength="8" />
                            </div>
                            <div class="col-12 col-md-6 mb-3">
                                <label class="text-muted small font-weight-bold mb-1" style="display:block;">XÁC NHẬN MẬT KHẨU</label>
                                <input type="password" name="confirmPassword" class="form-input" placeholder="Nhập lại mật khẩu" required />
                            </div>
                        </div>
                        
                        <!-- User Type -->
                        <div class="mb-4">
                            <label class="text-muted small font-weight-bold mb-2" style="display:block;">BẠN LÀ</label>
                            <div class="d-flex gap-2">
                                <label class="btn btn-outline w-100" style="cursor: pointer; position:relative; overflow:hidden;" id="lbl-student">
                                    <input type="radio" name="userType" value="student" style="position:absolute; opacity:0;" checked onchange="updateUserType(this)" />
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                                        <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                                        <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
                                    </svg>
                                    Sinh viên
                                </label>
                                <label class="btn btn-outline w-100" style="cursor: pointer; position:relative; overflow:hidden;" id="lbl-landlord">
                                    <input type="radio" name="userType" value="landlord" style="position:absolute; opacity:0;" onchange="updateUserType(this)" />
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                    </svg>
                                    Chủ nhà
                                </label>
                            </div>
                        </div>
                        
                        <!-- Terms -->
                        <div class="mb-4 d-flex align-center gap-2">
                            <input type="checkbox" id="terms" required style="width: 1rem; height: 1rem; border-radius: 4px; border: 2px solid var(--primary-500);" />
                            <label for="terms" class="text-muted small">
                                Tôi đồng ý với <a href="#" class="text-primary font-weight-medium">Điều khoản sử dụng</a> và <a href="#" class="text-primary font-weight-medium">Chính sách bảo mật</a>
                            </label>
                        </div>
                        
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 mb-4">
                            Tạo tài khoản
                        </button>
                        
                        <!-- Divider -->
                        <div class="d-flex align-center gap-3 mb-4">
                            <div style="flex: 1; height: 1px; background: var(--border-glass);"></div>
                            <span class="text-muted small">hoặc</span>
                            <div style="flex: 1; height: 1px; background: var(--border-glass);"></div>
                        </div>
                    </form>
                    
                    <!-- Social Register -->
                    <div class="d-flex gap-2 mb-4">
                        <form asp-action="GoogleLogin" method="get" class="w-100">
                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                            <button type="submit" class="btn btn-outline w-100">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                </svg>
                                Đăng ký với Google
                            </button>
                        </form>
                    </div>
                    
                    <!-- Login Link -->
                    <div class="text-center">
                        <p class="text-muted mb-0 small">
                            Đã có tài khoản? 
                            <a asp-action="Login" class="text-primary font-weight-bold">Đăng nhập ngay</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function updateUserType(radio) {
        // Reset styles
        document.getElementById('lbl-student').style.background = 'transparent';
        document.getElementById('lbl-student').style.color = 'var(--primary-600)';
        document.getElementById('lbl-landlord').style.background = 'transparent';
        document.getElementById('lbl-landlord').style.color = 'var(--primary-600)';
        
        // Apply active style
        if (radio.checked) {
            radio.parentElement.style.background = 'var(--primary-gradient)';
            radio.parentElement.style.color = 'white';
            radio.parentElement.style.border = 'none';
        } else {
             radio.parentElement.style.border = '2px solid var(--primary-600)';
        }
    }
    
    // Initialize
    window.onload = function() {
        const studentRadio = document.querySelector('input[value="student"]');
        if(studentRadio && studentRadio.checked) updateUserType(studentRadio);
    };
</script>

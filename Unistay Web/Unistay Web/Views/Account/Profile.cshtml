@model Unistay_Web.Models.User.UserProfile
@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card card-elevated overflow-hidden">
                    <div class="position-relative h-40 bg-gradient-to-r from-primary-500 to-primary-700"></div>

                    <div class="card-body p-5 pt-0 text-center">
                        <div class="position-relative d-inline-block mt-n6 mb-4">
                            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                            {
                                <img id="avatarPreview" src="@Model.AvatarUrl"
                                    class="rounded-full border-4 border-white shadow-lg" width="120" height="120"
                                    alt="@Model.FullName" style="object-fit: cover;">
                            }
                            else
                            {
                                <img id="avatarPreview"
                                    src="https://ui-avatars.com/api/?name=@(Model.FullName?.Replace(" ", "+") ?? "User")&background=random&size=120"
                                    class="rounded-full border-4 border-white shadow-lg" width="120" height="120"
                                    alt="@Model.FullName">
                            }
                            <button type="button"
                                class="position-absolute bottom-0 right-0 btn btn-sm btn-primary rounded-full p-2"
                                title="Đổi ảnh đại diện" id="changeAvatarBtn" data-bs-toggle="modal"
                                data-bs-target="#avatarModal">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path
                                        d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z">
                                    </path>
                                    <circle cx="12" cy="13" r="4"></circle>
                                </svg>
                            </button>
                        </div>

                        <h1 class="h3 mb-1">@Model.FullName</h1>
                        <p class="text-muted mb-4">@Model.Email</p>

                        <div class="d-flex justify-content-center gap-3 mb-5">
                            <span class="badge badge-primary px-3 py-2 rounded-full">
                                @(User.IsInRole("Landlord") ? "Chủ trọ" : "Người tìm trọ")
                            </span>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge badge-success px-3 py-2 rounded-full d-flex align-items-center gap-1">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Đã xác thực
                                </span>
                            }
                            @if (Model.IsVerified)
                            {
                                <span class="badge badge-info px-3 py-2 rounded-full d-flex align-items-center gap-1">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <path
                                            d="M22 11.08V5a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7">
                                        </path>
                                        <path d="M16 3v4"></path>
                                        <path d="M8 3v4"></path>
                                        <path d="M4 11h16"></path>
                                        <path d="M11 15h1"></path>
                                        <path d="M11 19h1"></path>
                                    </svg>
                                    Verified User
                                </span>
                            }
                        </div>

                        <div class="text-left bg-light rounded-xl p-4 mb-4">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div class="text-primary">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <path
                                            d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z">
                                        </path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="small text-muted mb-0">Số điện thoại</p>
                                    <p class="font-weight-medium mb-0">@(Model.PhoneNumber ?? "Chưa cập nhật")</p>
                                </div>
                            </div>

                            <hr class="border-neutral-200 my-3">

                            <div class="d-flex align-items-center gap-3">
                                <div class="text-primary">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                </div>
                                <div>
                                    <p class="small text-muted mb-0">Ngày tham gia</p>
                                    <p class="font-weight-medium mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">Chỉnh sửa hồ sơ</a>
                            <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-primary">Đổi mật
                                khẩu</a>
                            <a href="@Url.Action("LoginHistory", "Profile")" class="btn btn-ghost text-secondary">Lịch
                                sử đăng nhập</a>
                            <a href="@Url.Action("ActivityHistory", "Profile")"
                                class="btn btn-ghost text-secondary">Lịch sử hoạt động</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Avatar Upload Modal -->
<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="avatarModalLabel">Đổi ảnh đại diện</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="avatarForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="avatarFile" class="form-label">Chọn ảnh (JPG, PNG, GIF - tối đa 5MB)</label>
                        <input class="form-control" type="file" id="avatarFile" name="avatarFile"
                            accept=".jpg,.jpeg,.png,.gif" required>
                    </div>
                    <div id="uploadProgress" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="uploadAvatarBtn">Tải lên</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('uploadAvatarBtn').addEventListener('click', async function () {
            const fileInput = document.getElementById('avatarFile');
            const file = fileInput.files[0];

            if (!file) {
                alert('Vui lòng chọn một tệp.');
                return;
            }

            const formData = new FormData();
            formData.append('avatarFile', file);

            try {
                document.getElementById('uploadProgress').style.display = 'block';
                const response = await fetch('@Url.Action("UploadAvatar", "Profile")', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('avatarPreview').src = result.avatarUrl;
                    document.getElementById('avatarForm').reset();
                    bootstrap.Modal.getInstance(document.getElementById('avatarModal')).hide();
                    alert('Cập nhật ảnh đại diện thành công!');
                } else {
                    alert('Lỗi: ' + result.message);
                }
            } catch (error) {
                alert('Lỗi: ' + error.message);
            } finally {
                document.getElementById('uploadProgress').style.display = 'none';
            }
        });
    </script>
}
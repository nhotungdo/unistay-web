@model Unistay_Web.Models.User.UserProfile
@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card card-elevated overflow-hidden">
                    <div class="position-relative h-40 bg-gradient-to-r from-primary-500 to-primary-700"></div>
                    
                    <div class="card-body p-5 pt-0 text-center">
                        <div class="position-relative d-inline-block mt-n6 mb-4">
                            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                            {
                                <img src="@Model.AvatarUrl" class="rounded-full border-4 border-white shadow-lg" width="120" height="120" alt="@Model.FullName" style="object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://ui-avatars.com/api/?name=@(Model.FullName?.Replace(" ", "+") ?? "User")&background=random&size=120" class="rounded-full border-4 border-white shadow-lg" width="120" height="120" alt="@Model.FullName">
                            }
                            <button class="position-absolute bottom-0 right-0 btn btn-sm btn-primary rounded-full p-2" title="Đổi ảnh đại diện">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                                    <circle cx="12" cy="13" r="4"></circle>
                                </svg>
                            </button>
                        </div>
                        
                        <h1 class="h3 mb-1">@Model.FullName</h1>
                        <p class="text-muted mb-4">@Model.Email</p>
                        
                        <div class="d-flex justify-center gap-3 mb-5">
                            <span class="badge badge-primary px-3 py-2 rounded-full">
                                @(User.IsInRole("Landlord") ? "Chủ trọ" : "Người tìm trọ")
                            </span>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge badge-success px-3 py-2 rounded-full d-flex align-center gap-1">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Đã xác thực
                                </span>
                            }
                        </div>

                        <div class="text-left bg-light rounded-xl p-4 mb-4">
                            <div class="d-flex align-center gap-3 mb-3">
                                <div class="text-primary">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="small text-muted mb-0">Số điện thoại</p>
                                    <p class="font-weight-medium mb-0">@(Model.PhoneNumber ?? "Chưa cập nhật")</p>
                                </div>
                            </div>
                            
                            <hr class="border-neutral-200 my-3">
                            
                            <div class="d-flex align-center gap-3">
                                <div class="text-primary">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                </div>
                                <div>
                                    <p class="small text-muted mb-0">Ngày tham gia</p>
                                    <p class="font-weight-medium mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                             <a href="#" class="btn btn-outline-primary">Chỉnh sửa hồ sơ</a>
                             <a href="#" class="btn btn-ghost text-error">Đổi mật khẩu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@model List<Unistay_Web.Models.RentalAdvice.NeighborhoodDetail>

@{
    ViewData["Title"] = "Gợi Ý Khu Vực";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold mb-2">Khám Phá Khu Vực</h1>
            <p class="text-muted">Gợi ý các khu vực phù hợp nhất với phong cách sống của bạn</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M3 3h18v18H3zM21 9H3M21 15H3M12 3v18"/></svg>
                Lưới
            </button>
            <button class="btn btn-light">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon><line x1="8" y1="2" x2="8" y2="18"></line><line x1="16" y1="6" x2="16" y2="22"></line></svg>
                Bản đồ
            </button>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var area in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="glass-card h-100 p-0 overflow-hidden hover-lift">
                    <div class="p-4 pb-0">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h3 class="fw-bold mb-0">@area.Name</h3>
                            @if (area.RiskLevel == "Low")
                            {
                                <span class="badge bg-success-soft text-success">An toàn cao</span>
                            }
                            else if (area.RiskLevel == "Medium")
                            {
                                <span class="badge bg-warning-soft text-warning">Trung bình</span>
                            }
                        </div>
                        <p class="text-muted small">@area.Description</p>
                    </div>
                    
                    <div class="px-4 py-3">
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="p-2 rounded bg-light">
                                    <small class="d-block text-muted mb-1">Giá trung bình</small>
                                    <span class="fw-bold text-primary">@area.AveragePrice.ToString("N0")k</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-2 rounded bg-light">
                                    <small class="d-block text-muted mb-1">Đi lại</small>
                                    <span class="fw-bold">@area.CommuteTimeMinutes phút</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted d-block mb-2">Tiện ích nổi bật:</small>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var amenity in area.Amenities)
                                {
                                    <span class="badge bg-light text-dark border fw-normal">@amenity</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="p-4 border-top bg-light-soft">
                        <div class="d-flex justify-content-between text-center">
                            <div>
                                <div class="fw-bold h5 mb-0 text-success">@area.SafetyScore</div>
                                <small class="text-muted" style="font-size: 0.75rem;">An ninh</small>
                            </div>
                            <div>
                                <div class="fw-bold h5 mb-0 text-info">@area.WalkabilityScore</div>
                                <small class="text-muted" style="font-size: 0.75rem;">Đi bộ</small>
                            </div>
                            <div>
                                <a asp-action="PriceAnalysis" asp-route-area="@area.Name" class="btn btn-sm btn-primary rounded-pill px-3">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

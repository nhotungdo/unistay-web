@{
    ViewData["Title"] = "Quản trị hệ thống";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-between align-center mb-4">
        <div>
            <h1 class="h3 mb-0">Bảng điều khiển</h1>
            <p class="text-muted">Tổng quan về hoạt động của hệ thống</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="mr-2" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Xuất báo cáo
            </button>
        </div>
    </div>
    
    <!-- Stats Grid -->
    <div class="stats-grid stagger-animation">
        <div class="stat-card">
            <div class="stat-number">1,234</div>
            <div class="stat-label">Người dùng mới</div>
            <div class="mt-2 text-white opacity-70 small">
                <span class="font-weight-bold">↑ 12%</span> so với tháng trước
            </div>
        </div>
        
        <div class="stat-card" style="background: linear-gradient(135deg, var(--success-500), var(--success-700));">
            <div class="stat-number">567</div>
            <div class="stat-label">Phòng trọ đang hoạt động</div>
            <div class="mt-2 text-white opacity-70 small">
                <span class="font-weight-bold">↑ 5%</span> so với tháng trước
            </div>
        </div>
        
        <div class="stat-card" style="background: linear-gradient(135deg, var(--warning-500), var(--warning-700));">
            <div class="stat-number">23</div>
            <div class="stat-label">Báo cáo chưa xử lý</div>
            <div class="mt-2 text-white opacity-70 small">
                Cần xử lý ngay
            </div>
        </div>
        
        <div class="stat-card" style="background: linear-gradient(135deg, var(--accent-500), var(--accent-700));">
            <div class="stat-number">45M</div>
            <div class="stat-label">Doanh thu tháng này</div>
            <div class="mt-2 text-white opacity-70 small">
                <span class="font-weight-bold">↑ 8%</span> so với tháng trước
            </div>
        </div>
    </div>
    
    <!-- Recent Activity & Charts Placeholder -->
    <div class="row mt-4">
        <div class="col-12 col-lg-8 mb-4">
            <div class="card card-elevated h-100">
                <div class="card-body">
                    <h3 class="h5 mb-4">Biểu đồ tăng trưởng</h3>
                    <div class="d-flex justify-center align-center bg-light rounded-xl" style="height: 300px;">
                        <span class="text-muted">Biểu đồ sẽ được hiển thị ở đây</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4 mb-4">
            <div class="card card-elevated h-100">
                <div class="card-body">
                    <h3 class="h5 mb-4">Hoạt động gần đây</h3>
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex gap-3 align-start">
                            <div class="rounded-full bg-primary-100 p-2 text-primary">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <div>
                                <p class="mb-1 font-weight-medium">Nguyễn Văn A vừa đăng ký</p>
                                <small class="text-muted">2 phút trước</small>
                            </div>
                        </div>
                        <div class="d-flex gap-3 align-start">
                            <div class="rounded-full bg-success-100 p-2 text-success">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                            </div>
                            <div>
                                <p class="mb-1 font-weight-medium">Phòng trọ #123 được đăng tải</p>
                                <small class="text-muted">15 phút trước</small>
                            </div>
                        </div>
                        <div class="d-flex gap-3 align-start">
                            <div class="rounded-full bg-warning-100 p-2 text-warning">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                                    <line x1="12" y1="9" x2="12" y2="13"></line>
                                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                </svg>
                            </div>
                            <div>
                                <p class="mb-1 font-weight-medium">Báo cáo vi phạm từ UserXYZ</p>
                                <small class="text-muted">1 giờ trước</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <a href="#" class="text-primary font-weight-medium">Xem tất cả</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

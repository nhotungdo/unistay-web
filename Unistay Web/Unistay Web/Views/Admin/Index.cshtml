@{
    ViewData["Title"] = "Quản trị hệ thống";
}

<div class="container-fluid py-4" style="background: radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.05) 0%, transparent 50%); min-height: 100vh;">
    <div class="d-flex justify-between align-center mb-5 animate-fade-in">
        <div>
            <h1 class="h3 mb-1 font-weight-bold display-4" style="font-size: 1.75rem;">Bảng điều khiển</h1>
            <p class="text-muted">Tổng quan về hoạt động của hệ thống</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline hover-scale">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="mr-2" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Xuất báo cáo
            </button>
        </div>
    </div>
    
    <!-- Stats Grid -->
    <div class="stats-grid stagger-animation mb-5">
        <div class="glass-panel text-center p-4">
            <div class="stat-number text-gradient-primary">1,234</div>
            <div class="stat-label text-muted font-weight-bold">NGƯỜI DÙNG MỚI</div>
            <div class="mt-2 text-success small">
                <span class="font-weight-bold">↑ 12%</span> so với tháng trước
            </div>
        </div>
        
        <div class="glass-panel text-center p-4">
            <div class="stat-number text-gradient-success">567</div>
            <div class="stat-label text-muted font-weight-bold">PHÒNG ĐANG HOẠT ĐỘNG</div>
            <div class="mt-2 text-success small">
                <span class="font-weight-bold">↑ 5%</span> so với tháng trước
            </div>
        </div>
        
        <div class="glass-panel text-center p-4">
            <div class="stat-number text-gradient-warning">23</div>
            <div class="stat-label text-muted font-weight-bold">BÁO CÁO CHỜ XỬ LÝ</div>
            <div class="mt-2 text-warning small">
                Cần xử lý ngay
            </div>
        </div>
        
        <div class="glass-panel text-center p-4">
            <div class="stat-number text-gradient-accent">45M</div>
            <div class="stat-label text-muted font-weight-bold">DOANH THU THÁNG NÀY</div>
            <div class="mt-2 text-success small">
                <span class="font-weight-bold">↑ 8%</span> so với tháng trước
            </div>
        </div>
    </div>
    
    <!-- Recent Activity & Charts Placeholder -->
    <div class="row">
        <div class="col-12 col-lg-8 mb-4">
            <div class="glass-panel h-100 p-4 animate-scale-in">
                <h3 class="h5 mb-4 font-weight-bold">Biểu đồ tăng trưởng</h3>
                <div class="d-flex justify-center align-center rounded-xl" style="height: 300px; background: rgba(99, 102, 241, 0.03); border: 2px dashed var(--border-glass);">
                    <div class="text-center">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-muted mb-2">
                            <line x1="18" y1="20" x2="18" y2="10"></line>
                            <line x1="12" y1="20" x2="12" y2="4"></line>
                            <line x1="6" y1="20" x2="6" y2="14"></line>
                        </svg>
                        <p class="text-muted mb-0">Dữ liệu biểu đồ đang được cập nhật</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4 mb-4">
            <div class="glass-panel h-100 p-4 animate-scale-in" style="animation-delay: 0.1s;">
                <h3 class="h5 mb-4 font-weight-bold">Hoạt động gần đây</h3>
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex gap-3 align-start p-2 rounded hover-bg-light transition-fast">
                        <div class="rounded-circle bg-primary-100 p-2 text-primary d-flex align-center justify-center" style="width:36px; height:36px;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </div>
                        <div>
                            <p class="mb-0 font-weight-medium">Nguyễn Văn A vừa đăng ký</p>
                            <small class="text-muted">2 phút trước</small>
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-start p-2 rounded hover-bg-light transition-fast">
                        <div class="rounded-circle bg-success-100 p-2 text-success d-flex align-center justify-center" style="width:36px; height:36px;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                        </div>
                        <div>
                            <p class="mb-0 font-weight-medium">Phòng trọ #123 được đăng tải</p>
                            <small class="text-muted">15 phút trước</small>
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-start p-2 rounded hover-bg-light transition-fast">
                        <div class="rounded-circle bg-warning-100 p-2 text-warning d-flex align-center justify-center" style="width:36px; height:36px;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                                <line x1="12" y1="9" x2="12" y2="13"></line>
                                <line x1="12" y1="17" x2="12.01" y2="17"></line>
                            </svg>
                        </div>
                        <div>
                            <p class="mb-0 font-weight-medium">Báo cáo vi phạm từ UserXYZ</p>
                            <small class="text-muted">1 giờ trước</small>
                        </div>
                    </div>
                </div>
                <div class="mt-4 text-center">
                    <a href="#" class="text-primary font-weight-bold text-decoration-none hover-scale d-inline-block">Xem tất cả</a>
                </div>
            </div>
        </div>
    </div>
</div>

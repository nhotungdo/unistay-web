@{
    ViewData["Title"] = "Tin nhắn";
}

<section class="py-4 bg-light" style="height: calc(100vh - 80px);">
    <div class="container h-100">
        <div class="card card-elevated h-100 overflow-hidden d-flex flex-row">
            <!-- Sidebar -->
            <div class="w-30 border-right border-neutral-200 d-flex flex-column bg-white">
                <div class="p-4 border-bottom border-neutral-200">
                    <h2 class="h5 mb-3">Tin nhắn</h2>
                    <div class="position-relative">
                        <input type="text" class="form-control" placeholder="Tìm kiếm..." />
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-muted" style="position: absolute; right: 12px; top: 10px;">
                            <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65" stroke="currentColor" stroke-width="2"></line>
                        </svg>
                    </div>
                </div>
                
                <div class="flex-1 overflow-auto p-2">
                    <!-- User Item (Active) -->
                    <div class="p-3 rounded-lg bg-primary-50 cursor-pointer mb-2 animate-fade-in">
                        <div class="d-flex align-center gap-3">
                            <div class="position-relative">
                                <img src="https://ui-avatars.com/api/?name=Nguyen+Van+A&background=random" class="rounded-full" width="48" height="48" alt="Avatar">
                                <span class="position-absolute bottom-0 right-0 w-3 h-3 bg-success border-2 border-white rounded-full"></span>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="d-flex justify-between align-baseline mb-1">
                                    <h6 class="mb-0 text-truncate font-weight-bold">Nguyễn Văn A</h6>
                                    <small class="text-primary font-weight-bold">2m</small>
                                </div>
                                <p class="mb-0 text-truncate text-muted small font-weight-medium">Phòng còn trống không bạn?</p>
                            </div>
                        </div>
                    </div>

                    <!-- User Item -->
                    <div class="p-3 rounded-lg hover:bg-neutral-50 cursor-pointer mb-2 animate-fade-in" style="animation-delay: 0.1s">
                         <div class="d-flex align-center gap-3">
                            <div class="position-relative">
                                <img src="https://ui-avatars.com/api/?name=Tran+Thi+B&background=random" class="rounded-full" width="48" height="48" alt="Avatar">
                                <span class="position-absolute bottom-0 right-0 w-3 h-3 bg-neutral-400 border-2 border-white rounded-full"></span>
                            </div>
                             <div class="flex-1 min-w-0">
                                <div class="d-flex justify-between align-baseline mb-1">
                                    <h6 class="mb-0 text-truncate">Trần Thị B</h6>
                                    <small class="text-muted">1h</small>
                                </div>
                                <p class="mb-0 text-truncate text-muted small">Cảm ơn bạn nhé!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chat Area -->
            <div class="flex-1 d-flex flex-column bg-neutral-50 position-relative">
                <!-- Chat Empty State -->
                <div class="d-flex flex-column align-center justify-center h-100 text-center p-5">
                    <div class="w-16 h-16 bg-primary-100 text-primary rounded-full d-flex align-center justify-center mb-4">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                             <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="h4 mb-2">Chào mừng đến với tin nhắn</h3>
                    <p class="text-muted mb-4">Hãy chọn một cuộc trò chuyện từ danh sách bên trái để bắt đầu nhắn tin với chủ trọ hoặc người tìm phòng.</p>
                    <button class="btn btn-primary">Khám phá phòng trọ ngay</button>
                </div>
            </div>
        </div>
    </div>
</section>

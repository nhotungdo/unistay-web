@model Unistay_Web.Models.Room.Room
@{
    ViewData["Title"] = "Đăng phòng trọ";
}

<section class="py-5 bg-light">
    <div class="container mb-5">
        <div class="row justify-center">
            <div class="col-12 col-md-10 col-lg-8 mb-4">
                <div class="text-center mb-5">
                    <h1 class="h2 mb-2">Đăng phòng trọ mới</h1>
                    <p class="text-muted">Điền đầy đủ thông tin để thu hút người thuê nhanh nhất</p>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <!-- Basic Information -->
                    <div class="card card-elevated mb-4 animate-scale-in">
                        <div class="card-body p-4">
                            <h3 class="h5 mb-4 d-flex align-center gap-2">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-primary">
                                    <path d="M3 21h18M5 21V7l8-4 8 4v14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Thông tin cơ bản
                            </h3>
                            
                            <div class="form-group mb-4">
                                <label asp-for="Title" class="form-label">Tiêu đề bài đăng <span class="text-error">*</span></label>
                                <input asp-for="Title" class="form-control form-control-lg" placeholder="VD: Phòng trọ cao cấp, full nội thất tại Quận 1" />
                                <span asp-validation-for="Title" class="form-error"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Address" class="form-label">Địa chỉ chi tiết <span class="text-error">*</span></label>
                                <div class="position-relative">
                                    <input asp-for="Address" class="form-control" placeholder="Số nhà, tên đường, phường/xã, quận/huyện..." />
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-muted" style="position: absolute; right: 12px; top: 12px;">
                                        <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32688 5.63604 3.63604C7.32387 1.94521 9.61305 1 12 1C14.3869 1 16.6761 1.94521 18.364 3.63604C20.0518 5.32688 21 7.61305 21 10Z" stroke="currentColor" stroke-width="2"/>
                                    </svg>
                                </div>
                                <span asp-validation-for="Address" class="form-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="form-label">Mô tả phòng <span class="text-error">*</span></label>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Mô tả chi tiết về phòng, tiện ích xung quanh, giờ giấc..."></textarea>
                                <span asp-validation-for="Description" class="form-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing & Specs -->
                    <div class="card card-elevated mb-4 animate-scale-in" style="animation-delay: 0.1s">
                        <div class="card-body p-4">
                            <h3 class="h5 mb-4 d-flex align-center gap-2">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-primary">
                                    <path d="M12 1v22M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Giá cả & Diện tích
                            </h3>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-4">
                                    <div class="form-group">
                                        <label asp-for="Price" class="form-label">Giá thuê (tháng) <span class="text-error">*</span></label>
                                        <div class="position-relative">
                                            <input asp-for="Price" type="number" class="form-control" placeholder="0" />
                                            <span class="text-muted" style="position: absolute; right: 12px; top: 12px;">VNĐ</span>
                                        </div>
                                        <span asp-validation-for="Price" class="form-error"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mb-4">
                                    <div class="form-group">
                                        <label asp-for="Deposit" class="form-label">Tiền cọc</label>
                                        <div class="position-relative">
                                            <input asp-for="Deposit" type="number" class="form-control" placeholder="0" />
                                            <span class="text-muted" style="position: absolute; right: 12px; top: 12px;">VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-4">
                                    <div class="form-group">
                                        <label asp-for="Area" class="form-label">Diện tích <span class="text-error">*</span></label>
                                        <div class="position-relative">
                                            <input asp-for="Area" type="number" class="form-control" placeholder="0" />
                                            <span class="text-muted" style="position: absolute; right: 12px; top: 12px;">m²</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mb-4">
                                    <div class="form-group">
                                        <label asp-for="MaxOccupants" class="form-label">Số người tối đa</label>
                                        <div class="position-relative">
                                            <input asp-for="MaxOccupants" type="number" class="form-control" placeholder="1" />
                                            <span class="text-muted" style="position: absolute; right: 12px; top: 12px;">Người</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Images -->
                    <div class="card card-elevated mb-4 animate-scale-in" style="animation-delay: 0.2s">
                        <div class="card-body p-4">
                            <h3 class="h5 mb-4 d-flex align-center gap-2">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-primary">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                                    <circle cx="8.5" cy="8.5" r="1.5" fill="currentColor"/>
                                    <polyline points="21 15 16 10 5 21" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                Hình ảnh phòng
                            </h3>

                            <div class="form-group">
                                <div class="border-2 border-dashed border-neutral-300 rounded-xl p-5 text-center bg-light">
                                    <input type="file" id="imageUpload" class="d-none" multiple accept="image/*" />
                                    <label for="imageUpload" class="cursor-pointer mb-3 d-inline-block">
                                        <div class="feature-icon mb-3" style="width: 48px; height: 48px; background: var(--primary-100); color: var(--primary-600);">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                <polyline points="17 8 12 3 7 8"></polyline>
                                                <line x1="12" y1="3" x2="12" y2="15"></line>
                                            </svg>
                                        </div>
                                    </label>
                                    <p class="mb-1 fw-bold">Kéo thả ảnh vào đây hoặc click để tải lên</p>
                                    <small class="text-muted">Hỗ trợ JPG, PNG (Tối đa 5MB/ảnh)</small>
                                </div>
                                <div class="image-gallery mt-3" id="previewGallery">
                                    <!-- Previews will appear here -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Amenities -->
                    <div class="card card-elevated mb-4 animate-scale-in" style="animation-delay: 0.3s">
                        <div class="card-body p-4">
                            <h3 class="h5 mb-4 d-flex align-center gap-2">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-primary">
                                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Tiện ích
                            </h3>

                            <div class="row g-3">
                                <div class="col-6 col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="wifi" id="wifi">
                                        <label class="form-check-label" for="wifi">Wifi miễn phí</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="ac" id="ac">
                                        <label class="form-check-label" for="ac">Máy lạnh</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="wc" id="wc">
                                        <label class="form-check-label" for="wc">WC riêng</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="parking" id="parking">
                                        <label class="form-check-label" for="parking">Chỗ để xe</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="security" id="security">
                                        <label class="form-check-label" for="security">An ninh 24/7</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="kitchen" id="kitchen">
                                        <label class="form-check-label" for="kitchen">Kệ bếp</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex gap-3 justify-end">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">Đăng tin</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Simple image preview script
        document.getElementById('imageUpload').addEventListener('change', function(e) {
            const container = document.getElementById('previewGallery');
            container.innerHTML = ''; // Clear previous
            
            if (this.files) {
                Array.from(this.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const div = document.createElement('div');
                        div.className = 'gallery-item position-relative';
                        div.innerHTML = `
                            <img src="${e.target.result}" alt="Preview">
                        `;
                        container.appendChild(div);
                    }
                    reader.readAsDataURL(file);
                });
            }
        });
    </script>
}

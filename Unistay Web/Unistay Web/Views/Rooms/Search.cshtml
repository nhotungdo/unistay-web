@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Search Bar (Keep it for refining search) -->
    <div class="card shadow-sm mb-5" style="border-radius: 1rem;">
        <div class="card-body p-4">
            <form asp-action="Search" method="get">
                <div class="row g-3 align-items-center">
                    <div class="col-lg-5">
                        <div class="input-group">
                             <span class="input-group-text bg-transparent border-0"><i class="bi bi-search"></i></span>
                            <input type="text" name="location" class="form-control border-0 shadow-none" placeholder="Tìm kiếm theo địa điểm, quận hoặc trường đại học...">
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <select name="type" class="form-select border-0 shadow-none text-muted">
                            <option value="">Loại hình</option>
                            <option value="apartment">Căn hộ</option>
                            <option value="studio">Studio</option>
                            <option value="dorm">Ký túc xá</option>
                            <option value="shared">Ở ghép</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-4">
                         <select name="price" class="form-select border-0 shadow-none text-muted">
                            <option value="">Mức giá</option>
                            <option value="0-2">Dưới 2 triệu</option>
                            <option value="2-5">2 - 5 triệu</option>
                            <option value="5-10">5 - 10 triệu</option>
                            <option value="10+">Trên 10 triệu</option>
                        </select>
                    </div>
                     <div class="col-lg-1 col-md-4">
                        <button type="button" class="btn btn-light w-100" data-bs-toggle="collapse" data-bs-target="#filters">
                            <i class="bi bi-filter"></i>
                        </button>
                    </div>
                    <div class="col-lg-2">
                        <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Tìm kiếm</button>
                    </div>
                </div>
                <!-- Collapsible Filters -->
                <div class="collapse pt-3" id="filters">
                    <hr>
                    <div class="row g-3">
                        <div class="col-md-4">
                             <label class="form-label fw-bold small">Tiện ích</label>
                             <div class="p-3 bg-light rounded-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="wifi">
                                    <label class="form-check-label" for="wifi">Wifi</label>
                                </div>
                                 <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="ac">
                                    <label class="form-check-label" for="ac">Máy lạnh</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="parking">
                                    <label class="form-check-label" for="parking">Chỗ để xe</label>
                                </div>
                             </div>
                        </div>
                         <div class="col-md-4">
                            <label class="form-label fw-bold small">Số người</label>
                            <input type="range" class="form-range" min="1" max="10" step="1" id="numPeople">
                             <div class="text-center small text-muted">Tối đa <span id="numPeopleValue">5</span> người</div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Kết quả tìm kiếm</h2>
            <p class="text-muted mb-0">Tìm thấy 2 kết quả phù hợp</p>
        </div>
        <div>
            <select class="form-select form-select-sm" style="width: auto;">
                <option selected>Sắp xếp: Phổ biến nhất</option>
                <option>Mới nhất</option>
                <option>Giá: Thấp đến cao</option>
                <option>Giá: Cao đến thấp</option>
            </select>
        </div>
    </div>

    <!-- Room Listings -->
    <div class="row g-4">
        <!-- Room Card 1 -->
        <div class="col-12">
            <div class="card h-100 border-0 shadow-sm room-card-horizontal">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div class="img-container">
                             <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=800&q=80" class="img-fluid rounded-start" alt="Phòng trọ">
                             <span class="badge bg-danger position-absolute top-0 start-0 m-3">Nổi bật</span>
                             <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 shadow-sm"><i class="bi bi-heart"></i></button>
                             <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 mt-5 shadow-sm btn-compare" data-id="1" title="So sánh">
                                <i class="bi bi-arrow-left-right"></i>
                             </button>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column h-100">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title fw-bold">Căn hộ studio gần trung tâm</h5>
                                     <div class="text-end">
                                        <h4 class="fw-bolder text-primary mb-0">4.5tr</h4>
                                        <small class="text-muted">/ tháng</small>
                                    </div>
                                </div>
                                <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill"></i> Quận 1, TP. Hồ Chí Minh</p>
                                <div class="d-flex flex-wrap gap-3 my-3">
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-aspect-ratio me-1"></i>25m²</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-people me-1"></i>2 người</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-wifi me-1"></i>Wifi</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-wind me-1"></i>Máy lạnh</span>
                                </div>
                                <p class="card-text small">Căn hộ đầy đủ tiện nghi, an ninh 24/7, giờ giấc tự do. Gần các trường đại học và khu văn phòng.</p>
                            </div>
                            <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                                <div class="d-flex align-items-center">
                                    <img src="https://i.pravatar.cc/150?u=a" class="rounded-circle" width="30" height="30" alt="Avatar">
                                    <small class="ms-2 text-muted">Đăng bởi <strong>Hoàng An</strong></small>
                                </div>
                                <a asp-action="Details" asp-route-id="1" class="btn btn-primary rounded-pill px-4">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Room Card 2 -->
        <div class="col-12">
            <div class="card h-100 border-0 shadow-sm room-card-horizontal">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div class="img-container">
                           <img src="https://images.unsplash.com/photo-1596276020587-8044fe049813?w=800&q=80" class="img-fluid rounded-start" alt="Phòng trọ">
                           <span class="badge bg-success position-absolute top-0 start-0 m-3">Còn phòng</span>
                           <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 shadow-sm"><i class="bi bi-heart"></i></button>
                           <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 mt-5 shadow-sm btn-compare" data-id="2" title="So sánh">
                                <i class="bi bi-arrow-left-right"></i>
                           </button>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column h-100">
                             <div>
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title fw-bold">Phòng KTX cao cấp gần RMIT</h5>
                                     <div class="text-end">
                                        <h4 class="fw-bolder text-primary mb-0">1.8tr</h4>
                                        <small class="text-muted">/ giường</small>
                                    </div>
                                </div>
                                <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill"></i> Quận 7, TP. Hồ Chí Minh</p>
                                <div class="d-flex flex-wrap gap-3 my-3">
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-aspect-ratio me-1"></i>10m²</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-people me-1"></i>4 người/phòng</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-building me-1"></i>Có thang máy</span>
                                </div>
                                <p class="card-text small">Môi trường sống hiện đại, sạch sẽ. Khu vực chung rộng rãi, có bếp và máy giặt.
                                </p>
                            </div>
                           
                            <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                               <div class="d-flex align-items-center">
                                    <img src="https://i.pravatar.cc/150?u=b" class="rounded-circle" width="30" height="30" alt="Avatar">
                                    <small class="ms-2 text-muted">Đăng bởi <strong>KTX Life</strong></small>
                                </div>
                                <a asp-action="Details" asp-route-id="2" class="btn btn-primary rounded-pill px-4">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Pagination -->
    <nav class="mt-5 d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Sau</a></li>
        </ul>
    </nav>
</div>

    .room-card-horizontal {
        transition: all 0.3s ease;
        border-radius: 1rem !important;
    }
    .room-card-horizontal:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15)!important;
    }
    .room-card-horizontal .img-container {
        position: relative;
        height: 100%;
    }
    .room-card-horizontal .img-fluid {
        object-fit: cover;
        height: 100%;
        border-radius: 1rem 0 0 1rem;
    }
     @@media (max-width: 767.98px) {
        .room-card-horizontal .img-fluid {
             border-radius: 1rem 1rem 0 0;
        }
    }
    .form-select, .form-control {
        height: calc(3rem - 2px);
    }

    /* Floating Compare Bar */
    #compareBar {
        z-index: 1050;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.9);
        border-top: 1px solid rgba(0,0,0,0.1);
        transition: transform 0.3s ease-in-out;
    }
    #compareBar.show {
        transform: translateY(0);
    }
</style>

<!-- Floating Compare Bar -->
<div id="compareBar" class="position-fixed bottom-0 start-0 w-100 py-3 shadow-lg" style="transform: translateY(100%);">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
             <span class="badge bg-primary rounded-pill fs-6" id="compareCount">0</span>
             <span class="fw-bold text-dark">Phòng được chọn để so sánh</span>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-danger btn-sm rounded-pill" onclick="clearCompare()">Xóa tất cả</button>
            <a href="#" id="compareLink" class="btn btn-primary rounded-pill px-4 shadow-sm">So sánh ngay <i class="bi bi-arrow-right"></i></a>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const range = document.getElementById('numPeople');
        const rangeValue = document.getElementById('numPeopleValue');
        if(range) {
            range.addEventListener('input', function() {
                rangeValue.textContent = this.value;
            });
        }

        // Compare Logic
        const compareBar = document.getElementById('compareBar');
        const compareCount = document.getElementById('compareCount');
        const compareLink = document.getElementById('compareLink');
        let selectedIds = JSON.parse(localStorage.getItem('compareIds')) || [];

        function updateUI() {
            // Update buttons
            document.querySelectorAll('.btn-compare').forEach(btn => {
                const id = parseInt(btn.dataset.id);
                if (selectedIds.includes(id)) {
                    btn.classList.add('btn-primary', 'text-white');
                    btn.classList.remove('btn-light');
                } else {
                    btn.classList.remove('btn-primary', 'text-white');
                    btn.classList.add('btn-light');
                }
            });

            // Update Bar
            compareCount.textContent = selectedIds.length;
            if (selectedIds.length > 0) {
                compareBar.classList.add('show');
                compareLink.href = '/RentalAdvice/Compare?ids=' + selectedIds.join(',');
            } else {
                compareBar.classList.remove('show');
            }
            localStorage.setItem('compareIds', JSON.stringify(selectedIds));
        }

        // Click Handler
        document.querySelectorAll('.btn-compare').forEach(btn => {
            btn.addEventListener('click', function() {
                const id = parseInt(this.dataset.id);
                const index = selectedIds.indexOf(id);
                if (index === -1) {
                    if (selectedIds.length >= 3) {
                        alert('Bạn chỉ có thể so sánh tối đa 3 phòng cùng lúc.');
                        return;
                    }
                    selectedIds.push(id);
                } else {
                    selectedIds.splice(index, 1);
                }
                updateUI();
            });
        });

        window.clearCompare = function() {
            selectedIds = [];
            updateUI();
        }
        updateUI();
    });
</script>
}

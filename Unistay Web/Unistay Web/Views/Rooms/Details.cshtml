@{
    ViewData["Title"] = "Chi tiết phòng trọ";
}

<section class="py-5">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol style="display: flex; gap: 8px; list-style: none; padding: 0; align-items:center;">
                <li><a href="/" class="text-muted small">Trang chủ</a></li>
                <li class="text-muted small">/</li>
                <li><a asp-action="Index" class="text-muted small">Tìm trọ</a></li>
                <li class="text-muted small">/</li>
                <li style="color: var(--primary-600);" class="small font-weight-bold">Phòng trọ cao cấp Quận 1</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Main Content -->
            <div class="col-12 col-md-8">
                <!-- Gallery -->
                <div class="modern-card p-0 mb-4 animate-fade-in" style="overflow:hidden;">
                    <div style="position:relative;">
                        <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=800&h=500&fit=crop" class="w-100" style="height: 400px; object-fit: cover;" alt="Main Room Image">
                        <span class="badge badge-success" style="position: absolute; top: 16px; left: 16px; z-index:2;">Mới đăng</span>
                    </div>
                    <div class="d-flex p-3 gap-2" style="overflow-x:auto;">
                        <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=100&h=100&fit=crop" style="width: 80px; height: 80px; object-fit: cover; border-radius:8px; border:2px solid var(--primary-500); cursor:pointer;" alt="Thumb 1">
                        <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=100&h=100&fit=crop" style="width: 80px; height: 80px; object-fit: cover; border-radius:8px; opacity:0.7; cursor:pointer;" alt="Thumb 2">
                        <img src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=100&h=100&fit=crop" style="width: 80px; height: 80px; object-fit: cover; border-radius:8px; opacity:0.7; cursor:pointer;" alt="Thumb 3">
                        <div style="width: 80px; height: 80px; min-width: 80px; background:var(--bg-body); border-radius:8px; display:flex; align-items:center; justify-content:center; cursor:pointer; opacity:0.7;">
                            <span class="text-muted font-weight-bold">+5</span>
                        </div>
                    </div>
                </div>

                <!-- Info -->
                <div class="modern-card mb-4" style="padding: 2rem;">
                    <div class="d-flex justify-between align-center mb-2">
                        <h1 class="h3 mb-0">Phòng trọ cao cấp Quận 1</h1>
                        <button class="btn btn-outline" style="border:none; padding:0.5rem;" onclick="UnistayUI.toggleFavorite(this, 1)">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                            </svg>
                        </button>
                    </div>
                    <p class="text-muted d-flex align-center gap-2 mb-4">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" class="text-primary" stroke="currentColor" stroke-width="2">
                            <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32688 5.63604 3.63604C7.32387 1.94521 9.61305 1 12 1C14.3869 1 16.6761 1.94521 18.364 3.63604C20.0518 5.32688 21 7.61305 21 10Z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        123 Nguyễn Văn Cừ, Phường 4, Quận 5, TP.HCM
                    </p>

                    <div class="row mb-4">
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 text-center" style="background:var(--bg-body); border-radius:var(--radius-md);">
                                <div class="text-primary mb-1">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M3 21h18M5 21V7l8-4 8 4v14"></path>
                                    </svg>
                                </div>
                                <small class="text-muted" style="display:block;">Diện tích</small>
                                <strong>25m²</strong>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 text-center" style="background:var(--bg-body); border-radius:var(--radius-md);">
                                <div class="text-primary mb-1">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                    </svg>
                                </div>
                                <small class="text-muted" style="display:block;">Sức chứa</small>
                                <strong>2 người</strong>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 text-center" style="background:var(--bg-body); border-radius:var(--radius-md);">
                                <div class="text-primary mb-1">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                </div>
                                <small class="text-muted" style="display:block;">Đặt cọc</small>
                                <strong>1 tháng</strong>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 text-center" style="background:var(--bg-body); border-radius:var(--radius-md);">
                                <div class="text-primary mb-1">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                </div>
                                <small class="text-muted" style="display:block;">Ngày trống</small>
                                <strong>Ngay lập tức</strong>
                            </div>
                        </div>
                    </div>

                    <h4 class="h5 mb-3">Tiện nghi</h4>
                    <div style="display:flex; flex-wrap:wrap; gap:0.5rem; margin-bottom:1.5rem;">
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Wifi miễn phí</span>
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Máy lạnh</span>
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Máy nước nóng</span>
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Tủ lạnh</span>
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Máy giặt chung</span>
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Chỗ để xe</span>
                        <span class="badge badge-primary" style="font-weight:500; font-size:0.875rem; text-transform:none;">Camera an ninh</span>
                    </div>

                    <h4 class="h5 mb-3">Mô tả chi tiết</h4>
                    <div class="text-muted" style="line-height:1.8;">
                        <p>Phòng mới xây 100%, sạch sẽ, thoáng mát, có cửa sổ trời, ban công phơi đồ riêng.</p>
                        <p>Vị trí thuận lợi:</p>
                        <ul style="padding-left: 1.5rem; margin-bottom: 1rem; list-style-type:disc;">
                            <li>Cách ĐH Khoa học Tự nhiên 500m</li>
                            <li>Gần chợ, siêu thị tiện lợi, trạm xe bus</li>
                            <li>Khu vực an ninh, yên tĩnh, thích hợp cho sinh viên học tập</li>
                        </ul>
                        <p>Giờ giấc tự do, không chung chủ. Điện nước tính theo giá nhà nước.</p>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-12 col-md-4">
                <div class="glass-panel" style="padding: 1.5rem; position:sticky; top: 100px; z-index: 10;">
                    <div class="d-flex justify-between align-end mb-3">
                        <div>
                            <span class="text-primary h3 font-weight-bold">3.500.000</span>
                            <span class="text-muted">/tháng</span>
                        </div>
                        <span class="badge badge-success">Điện nước riêng</span>
                    </div>
                    
                    <div style="height: 1px; background: var(--border-glass); margin: 1.5rem 0;"></div>
                    
                    <div class="d-flex align-center gap-3 mb-4">
                        <img src="https://ui-avatars.com/api/?name=Chu+Tro&background=random" style="width:48px; height:48px; border-radius:50%;" alt="Owner">
                        <div>
                            <h5 class="mb-0 h6">Nguyễn Văn Chủ</h5>
                            <div class="d-flex align-center gap-1 text-warning-color small">
                                <span style="color:var(--warning-color);">★ 4.8</span>
                                <span class="text-muted">(12 đánh giá)</span>
                            </div>
                        </div>
                    </div>

                    <div style="display:flex; flex-direction:column; gap:1rem;">
                        <button class="btn btn-primary w-100">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                            Liên hệ ngay
                        </button>
                        <button class="btn btn-outline w-100">Đặt lịch xem phòng</button>
                    </div>

                     <div class="mt-3 text-center">
                        <small class="text-muted">Phản hồi thường trong 30 phút</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    ViewData["Title"] = "Tìm Phòng & Căn Hộ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bolder">Tìm không gian sống lý tưởng</h1>
        <p class="lead text-muted">Khám phá hàng ngàn lựa chọn phòng trọ và căn hộ trên toàn quốc.</p>
    </div>

    <!-- Dual-Purpose Section (Seeker vs Poster) -->
    <div class="glass-panel p-4 mb-5 animate-fade-in-up">
        <!-- Role Selection Tabs -->
        <ul class="nav nav-pills nav-fill mb-4 p-1 bg-light rounded-pill" id="pills-tab" role="tablist" style="max-width: 600px; margin: 0 auto; border: 1px solid var(--border-glass);">
            <li class="nav-item" role="presentation">
                <button class="nav-link active rounded-pill fw-bold" id="pills-seeker-tab" data-bs-toggle="pill" data-bs-target="#pills-seeker" type="button" role="tab" aria-selected="true">
                    <i class="bi bi-search me-2"></i>Tìm phòng
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-pill fw-bold" id="pills-poster-tab" data-bs-toggle="pill" data-bs-target="#pills-poster" type="button" role="tab" aria-selected="false">
                    <i class="bi bi-house-add me-2"></i>Đăng tin cho thuê
                </button>
            </li>
        </ul>

        <div class="tab-content" id="pills-tabContent">
            <!-- Seeker Section -->
            <div class="tab-pane fade show active" id="pills-seeker" role="tabpanel" aria-labelledby="pills-seeker-tab">
                <div class="text-center mb-4">
                     <p class="text-muted">Tìm kiếm chỗ ở lý tưởng phù hợp với nhu cầu và ngân sách của bạn.</p>
                </div>

                <form asp-action="Search" method="get">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-5">
                            <div class="input-group">
                                 <span class="input-group-text bg-white border-0"><i class="bi bi-search text-primary"></i></span>
                                <input type="text" name="location" class="form-control border-0 shadow-none" placeholder="Tìm kiếm theo địa điểm, quận hoặc trường đại học..." style="background: white;">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4">
                            <select name="type" class="form-select border-0 shadow-none text-muted" style="background: white;">
                                <option value="">Loại hình</option>
                                <option value="apartment">Căn hộ</option>
                                <option value="studio">Studio</option>
                                <option value="dorm">Ký túc xá</option>
                                <option value="shared">Ở ghép</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-4">
                             <select name="price" class="form-select border-0 shadow-none text-muted" style="background: white;">
                                <option value="">Mức giá</option>
                                <option value="0-2">Dưới 2 triệu</option>
                                <option value="2-5">2 - 5 triệu</option>
                                <option value="5-10">5 - 10 triệu</option>
                                <option value="10+">Trên 10 triệu</option>
                            </select>
                        </div>
                         <div class="col-lg-1 col-md-4">
                            <button type="button" class="btn btn-outline-primary w-100 border-0" data-bs-toggle="collapse" data-bs-target="#filters" style="background: rgba(var(--primary-rgb), 0.1);">
                                <i class="bi bi-sliders"></i>
                            </button>
                        </div>
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Tìm kiếm</button>
                        </div>
                    </div>
                    <!-- Collapsible Filters -->
                    <div class="collapse pt-3" id="filters">
                        <hr class="text-muted opacity-25">
                        <div class="row g-3">
                            <div class="col-md-4">
                                 <label class="form-label fw-bold small text-muted">Tiện ích</label>
                                 <div class="p-3 rounded-3" style="background: rgba(255,255,255,0.5);">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="wifi">
                                        <label class="form-check-label" for="wifi">Wifi</label>
                                    </div>
                                     <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="ac">
                                        <label class="form-check-label" for="ac">Máy lạnh</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="parking">
                                        <label class="form-check-label" for="parking">Chỗ để xe</label>
                                    </div>
                                 </div>
                            </div>
                             <div class="col-md-4">
                                <label class="form-label fw-bold small text-muted">Số người</label>
                                <input type="range" class="form-range" min="1" max="10" step="1" id="numPeople">
                                 <div class="text-center small text-muted">Tối đa <span id="numPeopleValue">5</span> người</div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Poster Section -->
            <div class="tab-pane fade" id="pills-poster" role="tabpanel" aria-labelledby="pills-poster-tab">
                 <div class="text-center mb-4">
                    <p class="text-muted">Đăng tin miễn phí để tiếp cận hàng ngàn sinh viên đang tìm trọ.</p>
                </div>
                
                <form asp-action="Create" method="get" class="row g-3 justify-content-center">
                    <div class="col-md-4">
                        <select name="type" class="form-select border-0 shadow-none" style="height: 3.5rem; background: white;">
                             <option value="">Chọn loại hình cho thuê</option>
                             <option value="apartment">Căn hộ</option>
                             <option value="studio">Studio</option>
                             <option value="dorm">Ký túc xá</option>
                             <option value="shared">Ở ghép</option>
                        </select>
                    </div>
                     <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-0"><i class="bi bi-geo-alt text-success"></i></span>
                            <input type="text" name="address" class="form-control border-0 shadow-none" style="height: 3.5rem; background: white;" placeholder="Nhập địa chỉ bất động sản...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-success w-100 rounded-pill fw-bold h-100">
                            <i class="bi bi-arrow-right-circle me-2"></i>Đăng tin ngay
                        </button>
                    </div>
                </form>
                
                <div class="row mt-5 g-4 text-center">
                    <div class="col-md-4">
                        <div class="p-4 rounded-3 h-100" style="background: rgba(255,255,255,0.4); border: 1px solid rgba(255,255,255,0.6);">
                            <div class="mb-3 text-primary">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
                                </svg>
                            </div>
                            <h6 class="fw-bold">Nhanh chóng</h6>
                            <small class="text-muted">Quy trình đăng tin đơn giản chỉ trong 2 phút</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4 rounded-3 h-100" style="background: rgba(255,255,255,0.4); border: 1px solid rgba(255,255,255,0.6);">
                            <div class="mb-3 text-info">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                            </div>
                            <h6 class="fw-bold">Hiệu quả cao</h6>
                            <small class="text-muted">Tiếp cận hàng ngàn sinh viên mỗi ngày</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <div class="p-4 rounded-3 h-100" style="background: rgba(255,255,255,0.4); border: 1px solid rgba(255,255,255,0.6);">
                            <div class="mb-3 text-success">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                </svg>
                            </div>
                            <h6 class="fw-bold">An toàn & Tin cậy</h6>
                            <small class="text-muted">Hệ thống xác thực người dùng minh bạch</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold mb-0">Hiện có 124 phòng</h5>
        <div>
            <select class="form-select form-select-sm" style="width: auto;">
                <option selected>Sắp xếp: Phổ biến nhất</option>
                <option>Mới nhất</option>
                <option>Giá: Thấp đến cao</option>
                <option>Giá: Cao đến thấp</option>
            </select>
        </div>
    </div>

    <!-- Room Listings -->
    <div class="row g-4">
        <!-- Room Card 1 -->
        <div class="col-12">
            <div class="card h-100 border-0 shadow-sm room-card-horizontal">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div class="img-container">
                             <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=800&q=80" class="img-fluid rounded-start" alt="Phòng trọ">
                             <span class="badge bg-danger position-absolute top-0 start-0 m-3">Nổi bật</span>
                             <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 shadow-sm"><i class="bi bi-heart"></i></button>
                             <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 mt-5 shadow-sm btn-compare" data-id="1" title="So sánh">
                                <i class="bi bi-arrow-left-right"></i>
                             </button>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column h-100">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title fw-bold">Căn hộ studio gần trung tâm</h5>
                                     <div class="text-end">
                                        <h4 class="fw-bolder text-primary mb-0">4.5tr</h4>
                                        <small class="text-muted">/ tháng</small>
                                    </div>
                                </div>
                                <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill"></i> Quận 1, TP. Hồ Chí Minh</p>
                                <div class="d-flex flex-wrap gap-3 my-3">
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-aspect-ratio me-1"></i>25m²</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-people me-1"></i>2 người</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-wifi me-1"></i>Wifi</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-wind me-1"></i>Máy lạnh</span>
                                </div>
                                <p class="card-text small">Căn hộ đầy đủ tiện nghi, an ninh 24/7, giờ giấc tự do. Gần các trường đại học và khu văn phòng.</p>
                            </div>
                            <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                                <div class="d-flex align-items-center">
                                    <img src="https://i.pravatar.cc/150?u=a" class="rounded-circle" width="30" height="30" alt="Avatar">
                                    <small class="ms-2 text-muted">Đăng bởi <strong>Hoàng An</strong></small>
                                </div>
                                <a asp-action="Details" asp-route-id="1" class="btn btn-primary rounded-pill px-4">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Room Card 2 -->
        <div class="col-12">
            <div class="card h-100 border-0 shadow-sm room-card-horizontal">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div class="img-container">
                           <img src="https://images.unsplash.com/photo-1596276020587-8044fe049813?w=800&q=80" class="img-fluid rounded-start" alt="Phòng trọ">
                           <span class="badge bg-success position-absolute top-0 start-0 m-3">Còn phòng</span>
                           <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 shadow-sm"><i class="bi bi-heart"></i></button>
                           <button class="btn btn-light btn-sm rounded-circle position-absolute top-0 end-0 m-3 mt-5 shadow-sm btn-compare" data-id="2" title="So sánh">
                                <i class="bi bi-arrow-left-right"></i>
                           </button>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column h-100">
                             <div>
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title fw-bold">Phòng KTX cao cấp gần RMIT</h5>
                                     <div class="text-end">
                                        <h4 class="fw-bolder text-primary mb-0">1.8tr</h4>
                                        <small class="text-muted">/ giường</small>
                                    </div>
                                </div>
                                <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill"></i> Quận 7, TP. Hồ Chí Minh</p>
                                <div class="d-flex flex-wrap gap-3 my-3">
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-aspect-ratio me-1"></i>10m²</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-people me-1"></i>4 người/phòng</span>
                                    <span class="badge bg-light text-dark p-2"><i class="bi bi-building me-1"></i>Có thang máy</span>
                                </div>

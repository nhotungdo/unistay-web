@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-bg"></div>
    <div class="container">
        <div class="grid-3" style="grid-template-columns: 1fr 1fr; align-items: center; gap: 4rem;">
            <div class="animate-fade-in">
                <span class="d-inline-flex align-items-center gap-2 px-3 py-1 rounded-full bg-primary-soft text-primary font-weight-bold mb-3" style="background: rgba(99, 102, 241, 0.1); color: var(--color-primary); border-radius: 9999px;">
                    <span style="width: 8px; height: 8px; background: currentColor; border-radius: 50%;"></span>
                    Nền tảng số 1 cho sinh viên
                </span>
                <h1 style="font-size: 3.5rem; margin-bottom: 1.5rem;">
                    Tìm nơi ở lý tưởng <br/>
                    <span class="text-gradient">Kết nối cộng đồng</span>
                </h1>
                <p class="text-muted" style="font-size: 1.25rem; margin-bottom: 2.5rem; max-width: 500px;">
                    Unistay giúp bạn tìm phòng trọ, bạn cùng phòng và mua bán đồ dùng một cách dễ dàng, an toàn và hiện đại nhất.
                </p>
                
                <div class="glass-panel p-2" style="display:flex; align-items:center; gap:0.5rem; padding:0.5rem; max-width:500px;">
                    <div style="flex:1; position:relative;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="position:absolute; left:12px; top:50%; transform:translateY(-50%); color:var(--text-muted);">
                            <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        <input type="text" style="width:100%; border:none; padding:1rem 1rem 1rem 2.5rem; background:transparent; font-size:1rem; outline:none; color: var(--text-main);" placeholder="Tìm kiếm khu vực (VD: Quận 1)...">
                    </div>
                    <button class="btn btn-primary" style="white-space: nowrap;">Tìm ngay</button>
                </div>
                
                <div class="mt-5 d-flex gap-5" style="display: flex; gap: 3rem; margin-top: 3rem;">
                    <div>
                        <h3 class="h2 text-gradient" style="margin-bottom:0; font-size:2rem; font-weight:800;">10K+</h3>
                        <p class="text-muted">Phòng trọ</p>
                    </div>
                    <div>
                        <h3 class="h2 text-gradient" style="margin-bottom:0; font-size:2rem; font-weight:800;">5K+</h3>
                        <p class="text-muted">Người dùng</p>
                    </div>
                     <div>
                        <h3 class="h2 text-gradient" style="margin-bottom:0; font-size:2rem; font-weight:800;">98%</h3>
                        <p class="text-muted">Hài lòng</p>
                    </div>
                </div>
            </div>
            
            <div class="animate-fade-in delay-200" style="position: relative;">
                <div class="modern-card" style="transform: rotate(-2deg); overflow: hidden; border-radius: 24px;">
                    <img src="https://images.unsplash.com/photo-1556020685-ae79c9562774?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Modern Room" style="width: 100%; height: auto; display: block;">
                    <div class="glass-panel" style="position: absolute; bottom: 20px; left: 20px; right: 20px; padding: 1.5rem;">
                        <div style="display: flex; justify-content: space-between; align-items: start;">
                            <div>
                                <h4 style="margin-bottom: 0.25rem;">Căn hộ Studio Luxury</h4>
                                <p class="text-muted small">Quận 7, TP.HCM</p>
                            </div>
                            <span style="background: white; color: black; padding: 0.25rem 0.75rem; border-radius: 9999px; font-weight: bold; font-size: 0.875rem;">
                                5.5tr/tháng
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section style="padding: 5rem 0;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h1">Khám phá dịch vụ</h2>
            <p class="text-muted" style="max-width: 600px; margin: 0 auto;">Hệ sinh thái toàn diện dành cho sinh viên hiện đại</p>
        </div>
        
        <div class="grid-3">
            <a asp-controller="Rooms" asp-action="Index" class="card-modern" style="text-decoration:none; padding: 2rem;">
                <div style="width:64px; height:64px; border-radius:16px; background:var(--primary-gradient); display:flex; align-items:center; justify-content:center; margin-bottom:1.5rem; color:white;">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                </div>
                <h3 class="h4 mb-3">Tìm phòng trọ</h3>
                <p class="text-muted mb-3">Hàng ngàn phòng trọ được xác thực, hình ảnh rõ ràng và giá cả minh bạch.</p>
                <div class="d-inline-flex align-items-center text-primary font-weight-bold">
                    Khám phá ngay 
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ml-1" style="margin-left: 0.5rem;">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </div>
            </a>
            
            <a asp-controller="Roommates" asp-action="Index" class="card-modern" style="text-decoration:none; padding: 2rem;">
                <div style="width:64px; height:64px; border-radius:16px; background:var(--color-secondary); display:flex; align-items:center; justify-content:center; margin-bottom:1.5rem; color:white;">
                     <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <h3 class="h4 mb-3">Tìm bạn ở ghép</h3>
                <p class="text-muted mb-3">Kết nối với những người bạn cùng sở thích, lối sống để chia sẻ không gian sống.</p>
                 <div class="d-inline-flex align-items-center text-primary font-weight-bold">
                    Tìm bạn ngay 
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ml-1" style="margin-left: 0.5rem;">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </div>
            </a>
            
            <a asp-controller="Marketplace" asp-action="Index" class="card-modern" style="text-decoration:none; padding: 2rem;">
                <div style="width:64px; height:64px; border-radius:16px; background:var(--color-accent); display:flex; align-items:center; justify-content:center; margin-bottom:1.5rem; color:white;">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                </div>
                <h3 class="h4 mb-3">Chợ đồ cũ</h3>
                <p class="text-muted mb-3">Mua bán, trao đổi đồ dùng học tập và sinh hoạt với giá sinh viên.</p>
                 <div class="d-inline-flex align-items-center text-primary font-weight-bold">
                    Mua sắm ngay 
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ml-1" style="margin-left: 0.5rem;">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </div>
            </a>
        </div>
    </div>
</section>

<!-- Featured Rooms Preview -->
<section style="padding: 5rem 0; background: linear-gradient(180deg, transparent, rgba(99, 102, 241, 0.03));">
    <div class="container">
        <div style="display:flex; justify-content:space-between; align-items:end; margin-bottom:3rem;">
            <div>
                <h2 class="h2">Phòng trọ nổi bật</h2>
                <p class="text-muted">Được xem nhiều nhất tuần qua</p>
            </div>
            <a asp-controller="Rooms" asp-action="Index" class="btn btn-outline">Xem tất cả</a>
        </div>
        
        <div class="grid-3">
            <!-- Room 1 -->
            <div class="card-modern">
                <div style="position:relative;">
                     <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=400&h=300&fit=crop" class="card-image">
                     <span style="position:absolute; top:1rem; right:1rem; background: var(--color-primary); color: white; padding: 0.25rem 0.75rem; border-radius: 99px; font-size: 0.75rem; font-weight: bold;">MỚI</span>
                </div>
                <div class="card-body">
                    <h3 class="h5 mb-2">Phòng Studio Quận 1</h3>
                    <p class="text-muted small mb-3">Đầy đủ nội thất, view đẹp, an ninh 24/7</p>
                    <div style="display:flex; gap:1rem; font-size:0.875rem; color:var(--text-muted); margin-bottom:1.5rem;">
                        <span>25m²</span> | <span>2 người</span>
                    </div>
                    <div style="display:flex; justify-content:space-between; align-items:center;">
                        <span class="h5 text-primary mb-0">3.5 tr/tháng</span>
                        <a asp-controller="Rooms" asp-action="Details" asp-route-id="1" class="btn btn-primary" style="padding:0.5rem 1rem; font-size:0.875rem;">Xem</a>
                    </div>
                </div>
            </div>
            
            <!-- Room 2 -->
             <div class="card-modern">
                <div style="position:relative;">
                     <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=400&h=300&fit=crop" class="card-image">
                     <span style="position:absolute; top:1rem; right:1rem; background: var(--color-accent); color: white; padding: 0.25rem 0.75rem; border-radius: 99px; font-size: 0.75rem; font-weight: bold;">HOT</span>
                </div>
                <div class="card-body">
                    <h3 class="h5 mb-2">Homestay Bình Thạnh</h3>
                    <p class="text-muted small mb-3">Gần trường HUTECH, UEF, đi lại thuận tiện</p>
                    <div style="display:flex; gap:1rem; font-size:0.875rem; color:var(--text-muted); margin-bottom:1.5rem;">
                        <span>30m²</span> | <span>4 người</span>
                    </div>
                    <div style="display:flex; justify-content:space-between; align-items:center;">
                        <span class="h5 text-primary mb-0">4.2 tr/tháng</span>
                        <a asp-controller="Rooms" asp-action="Details" asp-route-id="2" class="btn btn-primary" style="padding:0.5rem 1rem; font-size:0.875rem;">Xem</a>
                    </div>
                </div>
            </div>
            
            <!-- Room 3 -->
             <div class="card-modern">
                <div style="position:relative;">
                     <img src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=400&h=300&fit=crop" class="card-image">
                </div>
                <div class="card-body">
                    <h3 class="h5 mb-2">Phòng trọ cao cấp Q7</h3>
                    <p class="text-muted small mb-3">Khu dân cư yên tĩnh, gần Lotte Mart</p>
                    <div style="display:flex; gap:1rem; font-size:0.875rem; color:var(--text-muted); margin-bottom:1.5rem;">
                        <span>20m²</span> | <span>1 người</span>
                    </div>
                    <div style="display:flex; justify-content:space-between; align-items:center;">
                        <span class="h5 text-primary mb-0">2.8 tr/tháng</span>
                        <a asp-controller="Rooms" asp-action="Details" asp-route-id="3" class="btn btn-primary" style="padding:0.5rem 1rem; font-size:0.875rem;">Xem</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section style="padding: 5rem 0; position:relative; overflow:hidden;">
    <div style="position:absolute; inset:0; background:var(--bg-body); z-index:-1;"></div>
    <div class="container text-center">
        <div class="glass-panel" style="padding:5rem; background:var(--gradient-primary); color:white; border:none; position:relative; overflow:hidden;">
            <div style="position:absolute; top:-50%; left:-20%; width:100%; height:200%; background:radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 60%); pointer-events:none;"></div>
            
            <h2 class="h1 mb-3" style="color:white; position:relative; z-index:1;">Bạn có phòng trống?</h2>
            <p class="mb-5" style="max-width:600px; margin:0 auto; opacity:0.9; position:relative; z-index:1;">Đăng tin miễn phí ngay hôm nay để tiếp cận hàng ngàn sinh viên đang tìm trọ.</p>
            <a asp-controller="Rooms" asp-action="Create" class="btn" style="background:white; color:var(--primary-600); position:relative; z-index:1;">Đăng tin ngay</a>
        </div>
    </div>
</section>

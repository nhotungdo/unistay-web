@model Unistay_Web.Models.Marketplace.MarketplaceItem
@{
    ViewData["Title"] = "Đăng bán đồ cũ";
}

<section class="py-5 bg-light">
    <div class="container mb-5">
        <div class="row justify-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="text-center mb-5">
                    <h1 class="h2 mb-2">Đăng tin bán đồ</h1>
                    <p class="text-muted">Thanh lý đồ dùng nhanh chóng tới cộng đồng sinh viên</p>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="card card-elevated mb-4 animate-scale-in">
                        <div class="card-body p-4">
                            <!-- Basic Info -->
                            <div class="mb-4">
                                <label class="form-label">Tên sản phẩm <span class="text-error">*</span></label>
                                <input class="form-control form-control-lg" placeholder="VD: Tủ lạnh mini Aqua 90L cũ" />
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label">Danh mục <span class="text-error">*</span></label>
                                    <select class="form-select form-control">
                                        <option>Chọn danh mục</option>
                                        <option>Nội thất</option>
                                        <option>Điện tử</option>
                                        <option>Đồ dùng học tập</option>
                                        <option>Phương tiện</option>
                                        <option>Khác</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Giá bán (VNĐ) <span class="text-error">*</span></label>
                                    <input type="number" class="form-control" placeholder="0" />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Mô tả chi tiết <span class="text-error">*</span></label>
                                <textarea class="form-control" rows="5" placeholder="Mô tả tình trạng, thời gian sử dụng, lý do bán..."></textarea>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Hình ảnh sản phẩm</label>
                                <div class="border-2 border-dashed border-neutral-300 rounded-xl p-5 text-center bg-light cursor-pointer hover:border-primary-400 transition-base">
                                     <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted mb-2">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                        <polyline points="21 15 16 10 5 21"></polyline>
                                    </svg>
                                    <p class="mb-0 font-weight-medium">Nhấn để tải ảnh lên</p>
                                    <small class="text-muted">Hoặc kéo thả vào đây</small>
                                    <input type="file" multiple class="d-none" />
                                </div>
                            </div>
                            
                            <hr class="my-4 border-neutral-200">
                            
                            <h4 class="h6 mb-3">Thông tin liên hệ</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="tel" class="form-control" placeholder="09xxxxxxxx" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Khu vực giao dịch</label>
                                    <input type="text" class="form-control" placeholder="VD: Quận 5, TP.HCM" />
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="d-flex gap-3 justify-end">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">Đăng tin ngay</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@model Unistay_Web.Models.Marketplace.MarketplaceItem

@{
    ViewData["Title"] = "Đăng tin đồ cũ";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold">Đăng bán món đồ của bạn</h1>
                <p class="text-muted">Điền thông tin chi tiết để tiếp cận hàng ngàn sinh viên khác.</p>
            </div>

            <div class="card shadow-sm" style="border-radius: 1rem;">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="VD: Tủ lạnh mini 90L còn mới" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Mô tả tình trạng, thời gian đã sử dụng, lý do bán..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <!-- Price -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label fw-bold">Giá bán (VND)</label>
                                <input asp-for="Price" type="number" class="form-control" placeholder="Chỉ nhập số, VD: 1500000" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <!-- Category -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Category" class="form-label fw-bold">Loại sản phẩm</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">-- Chọn loại --</option>
                                    <option value="electronics">Đồ điện tử</option>
                                    <option value="furniture">Nội thất</option>
                                    <option value="books">Sách & Học tập</option>
                                    <option value="vehicle">Phương tiện</option>
                                    <option value="other">Khác</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="mb-4">
                            <label asp-for="Location" class="form-label fw-bold">Khu vực</label>
                            <input asp-for="Location" class="form-control" placeholder="VD: Quận 3, TP.HCM" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-4">
                            <label for="formFile" class="form-label fw-bold">Hình ảnh sản phẩm</label>
                            <input class="form-control" type="file" id="formFile" name="imageFile">
                             <small class="text-muted d-block mt-1">Tải lên ít nhất một ảnh rõ nét về sản phẩm.</small>
                        </div>
                        
                        <hr class="my-4">

                        <!-- Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold">
                                <i class="bi bi-send-check me-2"></i>Đăng tin ngay
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
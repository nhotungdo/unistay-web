@model Unistay_Web.Models.Marketplace.MarketplaceItem
@{
    ViewData["Title"] = "Đăng bán đồ cũ";
}

<section class="py-5">
    <div class="container mb-5">
        <div class="row justify-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="text-center mb-5 animate-fade-in">
                    <h1 class="h2 mb-2">Đăng tin bán đồ</h1>
                    <p class="text-muted">Thanh lý đồ dùng nhanh chóng tới cộng đồng sinh viên</p>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="glass-panel mb-4 animate-scale-in" style="padding: 2rem;">
                        <!-- Basic Info -->
                        <div class="mb-4">
                            <label class="text-muted small font-weight-bold mb-1 d-block">TÊN SẢN PHẨM <span class="text-danger">*</span></label>
                            <input class="form-input" placeholder="VD: Tủ lạnh mini Aqua 90L cũ" style="font-size: 1.1rem;" />
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="text-muted small font-weight-bold mb-1 d-block">DANH MỤC <span class="text-danger">*</span></label>
                                <div class="position-relative">
                                    <select class="form-input">
                                        <option>Chọn danh mục</option>
                                        <option>Nội thất</option>
                                        <option>Điện tử</option>
                                        <option>Đồ dùng học tập</option>
                                        <option>Phương tiện</option>
                                        <option>Khác</option>
                                    </select>
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted" style="position: absolute; right: 12px; top: 12px; pointer-events: none;">
                                        <polyline points="6 9 12 15 18 9"></polyline>
                                    </svg>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small font-weight-bold mb-1 d-block">GIÁ BÁN (VNĐ) <span class="text-danger">*</span></label>
                                <input type="number" class="form-input" placeholder="0" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="text-muted small font-weight-bold mb-1 d-block">MÔ TẢ CHI TIẾT <span class="text-danger">*</span></label>
                            <textarea class="form-input" rows="5" placeholder="Mô tả tình trạng, thời gian sử dụng, lý do bán..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="text-muted small font-weight-bold mb-1 d-block">HÌNH ẢNH SẢN PHẨM</label>
                            <div class="border-2 border-dashed rounded-xl p-5 text-center cursor-pointer transition-fast" style="background: rgba(255,255,255,0.5); border-color: var(--border-glass);">
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted mb-2">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                    <polyline points="21 15 16 10 5 21"></polyline>
                                </svg>
                                <p class="mb-0 font-weight-medium">Nhấn để tải ảnh lên</p>
                                <small class="text-muted">Hoặc kéo thả vào đây</small>
                                <input type="file" multiple class="d-none" />
                            </div>
                        </div>
                        
                        <hr class="my-4 border-glass" style="opacity: 0.5;">
                        
                        <h4 class="h6 mb-3">Thông tin liên hệ</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small font-weight-bold mb-1 d-block">SỐ ĐIỆN THOẠI</label>
                                <input type="tel" class="form-input" placeholder="09xxxxxxxx" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small font-weight-bold mb-1 d-block">KHU VỰC GIAO DỊCH</label>
                                <input type="text" class="form-input" placeholder="VD: Quận 5, TP.HCM" />
                            </div>
                        </div>

                    </div>

                    <div class="d-flex gap-3 justify-end">
                        <a asp-action="Index" class="btn btn-outline" style="border:none;">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-5">Đăng tin ngay</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

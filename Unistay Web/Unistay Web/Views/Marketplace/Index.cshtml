@{
    ViewData["Title"] = "Chợ đồ cũ";
}

<section style="padding: 2rem 0;">
    <div class="container">
        <!-- Header -->
        <div style="display:flex; justify-content:space-between; align-items:flex-end; margin-bottom: 2rem;">
            <div>
                <h1 class="h2 mb-2">Chợ sinh viên</h1>
                <p class="text-muted">Mua bán, trao đổi đồ dùng giá tốt trong cộng đồng</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="mr-2" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Đăng tin bán
            </a>
        </div>

        <!-- Categories -->
        <div class="glass-panel mb-5" style="padding:1rem; overflow-x:auto;">
            <div style="display:flex; gap:1rem; min-width:max-content;">
                <button type="button" class="btn btn-primary" style="border-radius:2rem;">Tất cả</button>
                <button type="button" class="btn btn-outline" style="border-radius:2rem; background:white;">Nội thất</button>
                <button type="button" class="btn btn-outline" style="border-radius:2rem; background:white;">Điện tử</button>
                <button type="button" class="btn btn-outline" style="border-radius:2rem; background:white;">Đồ dùng học tập</button>
                <button type="button" class="btn btn-outline" style="border-radius:2rem; background:white;">Phương tiện</button>
                <button type="button" class="btn btn-outline" style="border-radius:2rem; background:white;">Khác</button>
            </div>
        </div>

        <!-- Items Grid -->
        <div class="grid-3 animate-fade-in delay-200">
            <!-- Item 1 -->
            <div class="modern-card p-0" style="padding:0; position:relative;">
                <span class="badge badge-success" style="position:absolute; top:12px; right:12px; z-index:2;">Mới đăng</span>
                <div style="aspect-ratio:4/3; position:relative; overflow:hidden; border-radius:var(--radius-lg) var(--radius-lg) 0 0;">
                    <img src="https://images.unsplash.com/photo-1571175443880-49e1d58b794a?w=400&h=300&fit=crop" style="width:100%; height:100%; object-fit:cover; transition:transform 0.5s;" alt="Item">
                </div>
                <div style="padding:1.25rem;">
                    <div style="display:flex; justify-content:space-between; align-items:flex-start; margin-bottom:0.5rem;">
                        <h3 class="h6 mb-0" style="flex:1;">Tủ lạnh mini Aqua 90L</h3>
                        <span class="text-primary font-weight-bold" style="white-space:nowrap; margin-left:1rem;">1.5 tr</span>
                    </div>
                    
                    <div style="display:flex; align-items:center; gap:0.5rem; color:var(--text-muted); font-size:0.875rem; margin-bottom:1rem;">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32688 5.63604 3.63604C7.32387 1.94521 9.61305 1 12 1C14.3869 1 16.6761 1.94521 18.364 3.63604C20.0518 5.32688 21 7.61305 21 10Z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        Quận 3, TP.HCM
                    </div>
                    
                    <div style="border-top:1px solid var(--border-glass); padding-top:1rem; display:flex; align-items:center; gap:0.75rem;">
                        <img src="https://ui-avatars.com/api/?name=Tran+Van+B&background=random" style="width:24px; height:24px; border-radius:50%;" alt="User">
                        <small class="text-muted">Đăng bởi Trần Văn B</small>
                    </div>
                    <a asp-action="Details" asp-route-id="1" style="position:absolute; inset:0;"></a>
                </div>
            </div>

            <!-- Item 2 -->
             <div class="modern-card p-0" style="padding:0; position:relative;">
                <div style="aspect-ratio:4/3; position:relative; overflow:hidden; border-radius:var(--radius-lg) var(--radius-lg) 0 0;">
                    <img src="https://images.unsplash.com/photo-1550989460-0adf9ea622e2?w=400&h=300&fit=crop" style="width:100%; height:100%; object-fit:cover; transition:transform 0.5s;" alt="Item">
                </div>
                <div style="padding:1.25rem;">
                    <div style="display:flex; justify-content:space-between; align-items:flex-start; margin-bottom:0.5rem;">
                        <h3 class="h6 mb-0" style="flex:1;">Bàn học gỗ sồi</h3>
                        <span class="text-primary font-weight-bold" style="white-space:nowrap; margin-left:1rem;">800k</span>
                    </div>
                    
                    <div style="display:flex; align-items:center; gap:0.5rem; color:var(--text-muted); font-size:0.875rem; margin-bottom:1rem;">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                             <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32688 5.63604 3.63604C7.32387 1.94521 9.61305 1 12 1C14.3869 1 16.6761 1.94521 18.364 3.63604C20.0518 5.32688 21 7.61305 21 10Z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        Thủ Đức, TP.HCM
                    </div>
                    
                    <div style="border-top:1px solid var(--border-glass); padding-top:1rem; display:flex; align-items:center; gap:0.75rem;">
                        <img src="https://ui-avatars.com/api/?name=Le+Thi+C&background=random" style="width:24px; height:24px; border-radius:50%;" alt="User">
                        <small class="text-muted">Đăng bởi Lê Thị C</small>
                    </div>
                    <a asp-action="Details" asp-route-id="2" style="position:absolute; inset:0;"></a>
                </div>
            </div>

            <!-- Item 3 (Sold) -->
             <div class="modern-card p-0" style="padding:0; position:relative; opacity:0.75;">
                <span class="badge" style="position:absolute; top:12px; right:12px; z-index:2; background:#475569; color:white;">Đã bán</span>
                <div style="aspect-ratio:4/3; position:relative; overflow:hidden; border-radius:var(--radius-lg) var(--radius-lg) 0 0;">
                    <img src="https://images.unsplash.com/photo-1544244015-0df4b3ffc6b0?w=400&h=300&fit=crop" style="width:100%; height:100%; object-fit:cover; filter:grayscale(100%);" alt="Item">
                </div>
                <div style="padding:1.25rem;">
                    <div style="display:flex; justify-content:space-between; align-items:flex-start; margin-bottom:0.5rem;">
                        <h3 class="h6 mb-0 text-muted" style="flex:1;">iPad Air 4 64GB</h3>
                        <span class="text-muted font-weight-bold" style="white-space:nowrap; margin-left:1rem; text-decoration:line-through;">9.5 tr</span>
                    </div>
                    
                    <div style="display:flex; align-items:center; gap:0.5rem; color:var(--text-muted); font-size:0.875rem; margin-bottom:1rem;">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                             <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32688 5.63604 3.63604C7.32387 1.94521 9.61305 1 12 1C14.3869 1 16.6761 1.94521 18.364 3.63604C20.0518 5.32688 21 7.61305 21 10Z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        Quận 10, TP.HCM
                    </div>
                    
                    <div style="border-top:1px solid var(--border-glass); padding-top:1rem; display:flex; align-items:center; gap:0.75rem;">
                        <img src="https://ui-avatars.com/api/?name=Nguyen+D&background=random" style="width:24px; height:24px; border-radius:50%;" alt="User">
                        <small class="text-muted">Đăng bởi Nguyễn D</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        <div style="display:flex; justify-content:center; margin-top:4rem;">
            <div style="display:flex; gap:0.5rem;">
                <a href="#" class="btn btn-outline" style="padding:0.5rem 1rem;">&larr;</a>
                <a href="#" class="btn btn-primary" style="padding:0.5rem 1rem;">1</a>
                <a href="#" class="btn btn-outline" style="padding:0.5rem 1rem;">2</a>
                <a href="#" class="btn btn-outline" style="padding:0.5rem 1rem;">3</a>
                <a href="#" class="btn btn-outline" style="padding:0.5rem 1rem;">&rarr;</a>
            </div>
        </div>
    </div>
</section>

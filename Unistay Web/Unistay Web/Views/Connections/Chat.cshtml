@{
    ViewData["Title"] = "Messages";
}

<div class="chat-container">
    <div class="chat-sidebar" id="chatSidebar">
        <div class="sidebar-header">
            <h3>Messages</h3>
            <div class="search-box">
                <input type="text" placeholder="Search friends..." id="friendSearch">
                <i class="bi bi-search"></i>
            </div>
        </div>
        <div class="friends-list" id="friendsList">
            <!-- Friend items will be injected here -->
            <div class="loading-spinner">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <div class="chat-main" id="chatMain">
        <div class="chat-header" id="chatHeader" style="display:none;">
            <button class="back-button d-md-none" onclick="toggleSidebar()"><i class="bi bi-arrow-left"></i></button>
            <div class="user-info">
                <img src="/images/default-avatar.png" alt="User" id="headerAvatar">
                <div class="user-details">
                    <h4 id="headerName">Select a friend</h4>
                    <span class="status-indicator" id="headerStatus">Offline</span>
                </div>
            </div>
            <div class="header-actions">
                <button class="btn-icon"><i class="bi bi-telephone"></i></button>
                <button class="btn-icon"><i class="bi bi-camera-video"></i></button>
                <button class="btn-icon"><i class="bi bi-info-circle"></i></button>
            </div>
        </div>
        
        <div class="chat-empty-state" id="emptyState">
            <div class="empty-content">
                <i class="bi bi-chat-dots-fill"></i>
                <h3>Your Messages</h3>
                <p>Select a friend from the list to start chatting.</p>
            </div>
        </div>

        <div class="chat-messages" id="messagesArea" style="display:none;">
            <!-- Messages injected here -->
        </div>

        <div class="chat-input-area" id="inputArea" style="display:none;">
            <div class="typing-indicator" id="typingIndicator" style="display:none;">
                <span></span><span></span><span></span>
            </div>
            <div class="input-wrapper">
                <button class="btn-icon"><i class="bi bi-emoji-smile"></i></button>
                <button class="btn-icon"><i class="bi bi-paperclip"></i></button>
                <input type="text" id="messageInput" placeholder="Type a message...">
                <button class="btn-send" id="sendBtn"><i class="bi bi-send-fill"></i></button>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --chat-bg: #f3f4f6;
        --sidebar-bg: #ffffff;
        --primary-color: #6366f1;
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        --primary-light: #e0e7ff;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --border-color: #f3f4f6;
        --message-sent: #6366f1;
        --message-sent-gradient: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        --message-received: #f9fafb;
    }

    body {
        margin: 0;
        overflow: hidden; /* Prevent body scroll, handle inside chat */
        height: 100vh;
    }
    
    .chat-container {
        display: flex;
        height: calc(100vh - 60px); /* Adjust based on navbar height */
        background: var(--chat-bg);
        font-family: 'Inter', sans-serif;
    }

    /* Sidebar */
    .chat-sidebar {
        width: 350px;
        background: var(--sidebar-bg);
        border-right: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease;
    }

    .sidebar-header {
        padding: 25px 20px;
        background: #ffffff;
        border-bottom: 1px solid var(--border-color);
    }

    .sidebar-header h3 {
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 15px;
    }

    .search-box {
        position: relative;
    }

    .search-box input {
        width: 100%;
        padding: 10px 40px 10px 15px;
        border: 1px solid var(--border-color);
        border-radius: 20px;
        background: #fff;
        transition: all 0.2s;
    }

    .search-box input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px var(--primary-light);
    }

    .search-box i {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
    }

    .friends-list {
        flex: 1;
        overflow-y: auto;
        padding: 10px;
    }

    .friend-item {
        display: flex;
        align-items: center;
        padding: 12px;
        border-radius: 12px;
        cursor: pointer;
        transition: background 0.2s;
        margin-bottom: 5px;
    }

    .friend-item:hover {
        background: #f9fafb;
    }
    
    .friend-item.active {
        background: #eef2ff !important; /* Force override for active state */
        border-left: 4px solid var(--primary-color);
    }

    .friend-avatar {
        position: relative;
        margin-right: 15px;
    }

    .friend-avatar img {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
    }

    .online-status {
        position: absolute;
        bottom: 2px;
        right: 2px;
        width: 12px;
        height: 12px;
        background: #10b981; /* Green */
        border: 2px solid #fff;
        border-radius: 50%;
        display: none; /* Controlled by JS */
    }
    
    .online-status.online { display: block; }

    .friend-info {
        flex: 1;
        min-width: 0;
    }

    .friend-name {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 2px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .last-message {
        font-size: 0.85rem;
        color: var(--text-secondary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .badge-counter {
        background-color: #ef4444;
        color: white;
        font-size: 0.75rem;
        padding: 2px 6px;
        border-radius: 10px;
        min-width: 18px;
        text-align: center;
        font-weight: 600;
        margin-left: auto;
    }

    /* Main Chat */
    .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: #fff;
        position: relative;
    }

    .chat-header {
        padding: 15px 25px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(10px);
        z-index: 10;
        justify-content: space-between;
    }

    .user-info {
        display: flex;
        align-items: center;
    }
    
    .user-info img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 15px;
        object-fit: cover;
    }

    .user-details h4 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .status-indicator {
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .header-actions button {
        background: none;
        border: none;
        color: var(--primary-color);
        font-size: 1.2rem;
        margin-left: 15px;
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        transition: background 0.2s;
    }

    .header-actions button:hover {
        background: var(--primary-light);
    }
    
    .chat-empty-state {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: var(--text-secondary);
    }
    
    .chat-empty-state i {
        font-size: 4rem;
        color: var(--primary-light);
        margin-bottom: 20px;
    }

    .chat-messages {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
        background: #fdfdfd;
    }

    .message {
        max-width: 70%;
        display: flex;
        flex-direction: column;
    }

    .message.sent {
        align-self: flex-end;
        align-items: flex-end;
    }

    .message.received {
        align-self: flex-start;
        align-items: flex-start;
    }

    .message-content {
        padding: 12px 18px;
        border-radius: 18px;
        position: relative;
        font-size: 0.95rem;
        line-height: 1.5;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05);
    }

    .message.sent .message-content {
        background: var(--message-sent-gradient);
        color: white;
        border-bottom-right-radius: 4px;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.2);
    }

    .message.received .message-content {
        background: #ffffff;
        color: var(--text-primary);
        border: 1px solid #f3f4f6;
        border-bottom-left-radius: 4px;
    }

    .message-meta {
        font-size: 0.7rem;
        color: var(--text-secondary);
        margin-top: 5px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .chat-input-area {
        padding: 20px;
        background: #fff;
        border-top: 1px solid var(--border-color);
    }

    .input-wrapper {
        display: flex;
        align-items: center;
        background: var(--sidebar-bg);
        border-radius: 25px;
        padding: 5px 15px;
        border: 1px solid var(--border-color);
    }

    .input-wrapper input {
        flex: 1;
        border: none;
        background: transparent;
        padding: 12px;
        font-size: 1rem;
    }

    .input-wrapper input:focus {
        outline: none;
    }

    .btn-icon {
        background: none;
        border: none;
        color: var(--text-secondary);
        font-size: 1.2rem;
        cursor: pointer;
        padding: 8px;
        transition: color 0.2s;
    }

    .btn-icon:hover {
        color: var(--primary-color);
    }

    .btn-send {
        background: var(--primary-color);
        color: white;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.2s;
        margin-left: 5px;
    }

    .btn-send:hover {
        transform: scale(1.05);
    }

    /* Typing Indicator */
    .typing-indicator span {
        display: inline-block;
        width: 6px;
        height: 6px;
        background-color: var(--text-secondary);
        border-radius: 50%;
        animation: typing 1.4s infinite ease-in-out both;
        margin: 0 2px;
    }
    .typing-indicator span:nth-child(1) { animation-delay: -0.32s; }
    .typing-indicator span:nth-child(2) { animation-delay: -0.16s; }

    @@keyframes typing {
        0%, 80%, 100% { transform: scale(0); }
        40% { transform: scale(1); }
    }

    /* Mobile Responsiveness */
    @@media (max-width: 768px) {
        .chat-sidebar {
            width: 100%;
            position: absolute;
            height: 100%;
            z-index: 20;
            transform: translateX(0);
        }

        .chat-sidebar.hidden {
            transform: translateX(-100%);
        }

        .chat-main {
            width: 100%;
        }

        .chat-container {
            height: calc(100vh - 50px);
        }
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const initialFriendId = '@ViewBag.SelectedFriendId';
        let currentFriendId = null;
        let connection = null;
        let typingTimeout = null;

        // Initialize SignalR
        connection = new signalr.HubConnectionBuilder()
            .withUrl("/chatHub")
            .withAutomaticReconnect()
            .build();

        connection.start()
            .then(() => {
                console.log("SignalR Connected");
                loadFriends();
            })
            .catch(err => console.error(err));

        // Event: Receive Message
        // Event: Receive Message
        connection.on("ReceiveMessage", (message) => {
            if (message.senderId === currentFriendId) {
                appendMessage(message, false);
                scrollToBottom();
                connection.invoke("MessageRead", message.id);
            } else {
                connection.invoke("MessageDelivered", message.id);
                updateFriendListBadge(message.senderId);
            }
        });
        
        // Event: Message Sent (My own message confirmed)
        connection.on("MessageSent", (message) => {
             // We can use this to update status to "Sent" if we render optimistically
             updateMessageStatus(message.id, "sent");
        });

        connection.on("MessageSeen", (messageId) => {
            updateMessageStatus(messageId, "seen");
        });

        connection.on("MessageDelivered", (messageId) => {
            updateMessageStatus(messageId, "delivered");
        });

        connection.on("UserOnline", (userId) => {
            const el = document.querySelector(`.friend-item[data-id="${userId}"] .online-status`);
            if(el) el.classList.add('online');
            
            if(currentFriendId === userId) {
                 document.getElementById('headerStatus').innerText = "Online";
                 document.getElementById('headerStatus').style.color = "#10b981";
            }
        });

        connection.on("UserOffline", (userId) => {
            const el = document.querySelector(`.friend-item[data-id="${userId}"] .online-status`);
            if(el) el.classList.remove('online');

            if(currentFriendId === userId) {
                 document.getElementById('headerStatus').innerText = "Offline";
                 document.getElementById('headerStatus').style.color = "";
            }
        });

        connection.on("UserTyping", (senderId) => {
            if (senderId === currentFriendId) {
                document.getElementById('headerStatus').innerText = "Typing...";
                document.getElementById('headerStatus').style.color = "#4f46e5";
            }
        });
        
        connection.on("UserStoppedTyping", (senderId) => {
            if (senderId === currentFriendId) {
                document.getElementById('headerStatus').innerText = "Online"; // Or fetch real status
                document.getElementById('headerStatus').style.color = "";
            }
        });

        // UI Logic
        function loadFriends() {
            fetch('/api/connections/friends')
                .then(res => res.json())
                .then(data => {
                    const list = document.getElementById('friendsList');
                    list.innerHTML = '';
                    if(data.length === 0) {
                         list.innerHTML = '<div class="text-center text-muted p-3">No connections yet. Go to Friend Finder!</div>';
                         return;
                    }
                    data.forEach(friend => {
                        const item = document.createElement('div');
                        item.className = 'friend-item';
                        item.dataset.id = friend.friendId;
                        item.onclick = () => selectFriend(friend);
                        
                        const badgeHtml = friend.unreadCount > 0 
                            ? `<span class="badge-counter">${friend.unreadCount}</span>` 
                            : '';

                        item.innerHTML = `
                            <div class="friend-avatar">
                                <img src="${friend.friendAvatar}" alt="${friend.friendName}">
                                <div class="online-status"></div>
                            </div>
                            <div class="friend-info" style="display:flex; flex-direction:column; width:100%;">
                                <div style="display:flex; justify-content:space-between; align-items:center;">
                                    <div class="friend-name">${friend.friendName}</div>
                                    ${badgeHtml}
                                </div>
                                <div class="last-message">Click to chat</div>
                            </div>
                        `;
                        list.appendChild(item);
                        
                        if(friend.friendId === initialFriendId) {
                            selectFriend(friend);
                        }
                    });
                });
        }

        function selectFriend(friend) {
            currentFriendId = friend.friendId;
            document.getElementById('headerName').innerText = friend.friendName;
            document.getElementById('headerAvatar').src = friend.friendAvatar;
            document.getElementById('headerStatus').innerText = "Online"; // Default for now
            
            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('chatHeader').style.display = 'flex';
            document.getElementById('messagesArea').style.display = 'flex';
            document.getElementById('inputArea').style.display = 'block';
            
            // Highlight sidebar item
            document.querySelectorAll('.friend-item').forEach(el => el.classList.remove('active'));
            const activeItem = document.querySelector(`.friend-item[data-id="${friend.friendId}"]`);
            if(activeItem) {
                activeItem.classList.add('active');
                // Remove badge
                const badge = activeItem.querySelector('.badge-counter');
                if(badge) badge.remove();
                activeItem.style.backgroundColor = '';
            }

            // Mobile view handling
            if(window.innerWidth <= 768) {
                document.getElementById('chatSidebar').classList.add('hidden');
            }

            loadMessages(friend.friendId);
            
            // Mark read
            fetch(`/api/messages/read/${friend.friendId}`, { method: 'POST' });
        }

        function loadMessages(friendId) {
            const area = document.getElementById('messagesArea');
            area.innerHTML = '<div class="text-center p-3"><div class="spinner-border spinner-border-sm"></div></div>';
            
            fetch(`/api/messages/${friendId}`)
                .then(res => res.json())
                .then(messages => {
                    area.innerHTML = '';
                    messages.forEach(msg => {
                        appendMessage(msg, msg.isMine);
                    });
                    scrollToBottom();
                });
        }

        function appendMessage(msg, isMine) {
            const area = document.getElementById('messagesArea');
            const div = document.createElement('div');
            div.className = `message ${isMine ? 'sent' : 'received'}`;
            div.id = `msg-${msg.id}`;
            
            const time = new Date(msg.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            
            let statusIcon = '';
            if(isMine) {
                if(msg.status === 'seen') statusIcon = '<i class="bi bi-check-all text-primary"></i>';
                else if(msg.status === 'delivered') statusIcon = '<i class="bi bi-check-all"></i>';
                else statusIcon = '<i class="bi bi-check"></i>';
            }

            div.innerHTML = `
                <div class="message-content">
                    ${escapeHtml(msg.content)}
                </div>
                <div class="message-meta">
                    ${time} ${statusIcon}
                </div>
            `;
            area.appendChild(div);
        }

        function updateMessageStatus(id, status) {
            const msgEl = document.getElementById(`msg-${id}`);
            if(msgEl && msgEl.classList.contains('sent')) {
                const meta = msgEl.querySelector('.message-meta');
                
                let icon = '<i class="bi bi-check"></i>';
                if(status === 'delivered') icon = '<i class="bi bi-check-all"></i>';
                if(status === 'seen') icon = '<i class="bi bi-check-all text-primary"></i>';
                
                // If current status is 'seen', don't downgrade
                if(meta.innerHTML.includes('text-primary') && status !== 'seen') return;
                
                // Replace the icon part. This acts as a simple heuristic replacement
                const time = meta.innerText.trim();
                meta.innerHTML = `${time} ${icon}`;
            }
        }
        
        function updateFriendListBadge(friendId) {
            const item = document.querySelector(`.friend-item[data-id="${friendId}"]`);
            if(item && !item.classList.contains('active')) {
                item.style.backgroundColor = '#f0f9ff';
                
                let badge = item.querySelector('.badge-counter');
                if(badge) {
                    let count = parseInt(badge.innerText);
                    badge.innerText = count + 1;
                } else {
                    // Create badge
                    const nameRow = item.querySelector('.friend-name').parentNode;
                    badge = document.createElement('span');
                    badge.className = 'badge-counter';
                    badge.innerText = '1';
                    nameRow.appendChild(badge);
                }
            }
        }

        function scrollToBottom() {
            const area = document.getElementById('messagesArea');
            area.scrollTop = area.scrollHeight;
        }

        // Send Message
        document.getElementById('sendBtn').addEventListener('click', sendMessage);
        document.getElementById('messageInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const content = input.value.trim();
            if (!content || !currentFriendId) return;

            connection.invoke("SendMessage", currentFriendId, content)
                .catch(err => console.error(err));
            
            input.value = '';
        }

        // Typing logic
        const input = document.getElementById('messageInput');
        input.addEventListener('input', () => {
            if(!currentFriendId) return;
            connection.invoke("Typing", currentFriendId);
            
            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(() => {
                connection.invoke("StopTyping", currentFriendId);
            }, 1000);
        });

        function toggleSidebar() {
             document.getElementById('chatSidebar').classList.toggle('hidden');
        }
        
        function escapeHtml(text) {
             const div = document.createElement('div');
             div.textContent = text;
             return div.innerHTML;
        }
    </script>
}

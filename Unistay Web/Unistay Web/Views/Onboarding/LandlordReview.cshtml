@model Unistay_Web.Models.User.UserProfile
@{
    ViewData["Title"] = "Xem Lại Thông Tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="onboarding-container fade-in">
    <div class="glass-panel mx-auto col-lg-6 p-0 overflow-hidden">
        <div class="progress" style="height: 6px; border-radius: 0;">
            <div class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="p-5">
            <h2 class="text-center fw-bold mb-4">Bạn Đã Gần Hoàn Tất!</h2>
            <p class="text-center text-muted mb-5">Vui lòng xem lại thông tin trước khi gửi.</p>

            <div class="card border-0 bg-light mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Thông Tin Liên Hệ</h5>
                    <p class="mb-1"><i class="bi bi-person-fill me-2"></i>@Model.FullName</p>
                    <p class="mb-1"><i class="bi bi-telephone-fill me-2"></i>@Model.PhoneNumber <span class="badge bg-success ms-2">Đã xác minh</span></p>
                    <p class="mb-1"><i class="bi bi-envelope-fill me-2"></i>@Model.Email</p>
                </div>
            </div>

            <div class="card border-0 bg-light mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Địa Chỉ Đã Xác Minh</h5>
                    <p class="mb-0">
                        <i class="bi bi-geo-alt-fill me-2 text-danger"></i>
                        @Model.HouseNumber @Model.StreetName, @Model.Ward, @Model.District, @Model.City
                    </p>
                </div>
            </div>

            <form asp-action="CompleteOnboarding" method="post">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark btn-lg shadow rounded-pill">
                        Xác Minh Chi Tiết & Gửi <i class="bi bi-check-circle-fill ms-2"></i>
                    </button>
                    <a href="@Url.Action("LandlordVerify")" class="btn btn-link text-muted">Quay Lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .onboarding-container {
        padding: 4rem 1rem;
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .glass-panel {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; margin-top: 20px; }
        to { opacity: 1; margin-top: 0; }
    }
</style>

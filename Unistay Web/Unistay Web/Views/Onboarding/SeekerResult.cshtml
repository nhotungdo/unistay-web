@model Unistay_Web.Models.User.UserProfile
@{
    ViewData["Title"] = "Phân Tích Vũ Trụ Của Bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="onboarding-container fade-in">
    <div class="glass-panel mx-auto col-lg-8 p-0 overflow-hidden">
        <div class="progress" style="height: 6px; border-radius: 0;">
            <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="p-5 text-center">
            <div class="mb-4">
                <div class="zodiac-badge d-inline-block p-4 rounded-circle bg-light mb-3">
                    <!-- Dynamic Icon based on Sign could be cool, but using generic for now -->
                    <i class="bi bi-moon-stars-fill display-3 text-primary"></i>
                </div>
                <h2 class="display-5 fw-bold text-gradient">@Model.ZodiacSign</h2>
                <p class="text-muted text-uppercase letter-spacing-2">Hồ sơ chiêm tinh học của bạn</p>
            </div>

            <div class="analysis-card bg-light bg-opacity-50 p-4 rounded-3 text-start mb-5 mx-auto" style="max-width: 600px;">
                <h5 class="fw-bold mb-3"><i class="bi bi-robot me-2 text-primary"></i>Phân tích từ Unistay AI</h5>
                <p class="lead fs-6">@Model.CompatibilityAnalysis</p>
            </div>

            <form asp-action="CompleteOnboarding" method="post">
                <button type="submit" class="btn btn-dark btn-lg px-5 shadow rounded-pill pulse-animation">
                    Bắt Đầu Ngay <i class="bi bi-check-lg ms-2"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .onboarding-container {
        padding: 4rem 1rem;
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .glass-panel {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .text-gradient {
        background: linear-gradient(45deg, #10b981, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .zodiac-badge {
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }
    
    .letter-spacing-2 {
        letter-spacing: 2px;
        font-size: 0.8rem;
    }

    .pulse-animation {
        animation: pulse 2s infinite;
    }

    .fade-in {
        animation: fadeIn 0.8s ease-out;
    }

    @@keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.2); }
        70% { box-shadow: 0 0 0 10px rgba(0, 0, 0, 0); }
        100% { box-shadow: 0 0 0 0 rgba(0, 0, 0, 0); }
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
</style>
